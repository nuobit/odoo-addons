<odoo>
    <record id="stock_picking_import_serials_view_form" model="ir.ui.view">
        <field name="name">stock.picking.import.serials.form</field>
        <field name="model">stock.picking.import.serials</field>
        <field name="arch" type="xml">
            <form string="Import serial numbers">
                <header>
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="params,result"
                    />
                </header>
                <group col="4" states="params">
                    <field name="datas" filename="datas_fname" />
                    <field name="datas_fname" invisible="1" />
                </group>
                <group states="result">
                    <field name="result" nolabel="1" />
                </group>
                <footer>
                    <button
                        string="Import"
                        name="import_serials"
                        type="object"
                        default_focus="1"
                        class="btn-primary"
                        states="params"
                    />
                    <button
                        string="Cancel"
                        class="btn-default"
                        special="cancel"
                        states="params"
                    />
                    <button
                        string="Close"
                        class="btn-primary"
                        special="cancel"
                        states="result"
                    />
                </footer>
                <div class="oe_clear" />
            </form>
        </field>
    </record>

    <act_window
        id="stock_picking_import_serials_action"
        name="Import serial numbers"
        res_model="stock.picking.import.serials"
        view_mode="form"
        target="new"
        view_type="form"
    />
</odoo>
