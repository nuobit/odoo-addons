<odoo>
    <record id="connector_sale_order_view_form" model="ir.ui.view">
        <field name="name">connector.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field
            name="groups_id"
            eval="[(4, ref('connector.group_connector_manager'))]"
        />
        <field name="arch" type="xml">
            <div name="button_box" position="before">
                <field name="is_woocommerce" invisible="1" />
                 <widget
                    name="web_ribbon"
                    title="WooCommerce"
                    bg_color="bg-info"
                    attrs="{'invisible': [('is_woocommerce', '!=', True)]}"
                />
            </div>
            <xpath expr="/form/sheet/notebook" position="inside">
                <page string="Connector WooCommerce" name="connector_woocommerce">
                    <group string="WooCommerce Bindings">
                        <field name="woocommerce_bind_ids" nolabel="1" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="woocommerce_sale_order_view_form" model="ir.ui.view">
        <field name="name">woocommerce.sale.order.view.form</field>
        <field name="model">woocommerce.sale.order</field>
        <field name="arch" type="xml">
            <form string="WooCommerce Sale order">
                <group>
                    <field name="backend_id" />
                    <field name="odoo_id" readonly="True" />
                    <field name="woocommerce_idsaleorder" readonly="True" />
                    <field name="woocommerce_status" readonly="True" />
                    <field name="sync_date" readonly="True" />
                </group>
            </form>
        </field>
    </record>
    <record id="woocommerce_sale_order_view_tree" model="ir.ui.view">
        <field name="name">woocommerce.sale.order.view.tree</field>
        <field name="model">woocommerce.sale.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="backend_id" />
                <field name="odoo_id" />
                <field name="woocommerce_idsaleorder" readonly="True" />
                <field name="woocommerce_status" readonly="True" />
                <field name="sync_date" />
                <button
                    name="resync_export"
                    type="object"
                    string="Resynchronize"
                    icon="fa-refresh fa-lg"
                />
            </tree>
        </field>
    </record>
    <record id="woocommerce_sale_order_view_filter" model="ir.ui.view">
        <field name="name">woocommerce.sale.order.view.filter</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter" />
        <field name="arch" type="xml">
            <xpath expr="//group" position="before">
                <separator />
                <filter
                    string="WooCommerce"
                    name="is_woocommerce"
                    domain="[('is_woocommerce', '=', 'True')]"
                />
            </xpath>
        </field>
    </record>
    <record id="woocommerce_sale_order_action" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="res_model">woocommerce.sale.order</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
