    <record id="woocommerce_product_public_category_view_form" model="ir.ui.view">
        <field name="name">woocommerce.product.public.category.view.form</field>
        <field name="model">woocommerce.product.public.category</field>
        <field name="arch" type="xml">
            <form string="WooCommerce Product Public Category">
                <group>
                    <field name="backend_id" />
                    <field name="odoo_id" readonly="True" />
                    <field name="woocommerce_idproduct" readonly="True" />
                    <field name="sync_date" readonly="True" />
                </group>
            </form>
        </field>
    </record>
    <record id="woocommerce_product_public_category_view_tree" model="ir.ui.view">
        <field name="name">woocommerce.product.public.category.view.tree</field>
        <field name="model">woocommerce.product.public.category</field>
        <field name="arch" type="xml">
            <tree string="WooCommerce Product product">
                <field name="backend_id" />
                <field name="odoo_id" />
                <field name="woocommerce_idproduct" readonly="True" />
                <field name="sync_date" />
                <button
                    name="resync"
                    type="object"
                    string="Resynchronize"
                    icon="fa-refresh fa-lg"
                />
            </tree>
        </field>
    </record>
    <record
        id="woocommerce_product_public_category_action"
        model="ir.actions.act_window"
    >
        <field name="name">Product Public Category</field>
        <field name="res_model">woocommerce.product.public.category</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
