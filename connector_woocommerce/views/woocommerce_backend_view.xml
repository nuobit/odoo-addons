<odoo>
    <record id="woocommerce_backend_view_form" model="ir.ui.view">
        <field name="name">woocommerce.backend.form</field>
        <field name="model">woocommerce.backend</field>
        <field name="arch" type="xml">
            <form string="woocommerce Backend">
                <header>
                    <button
                        name="button_check_connection"
                        type="object"
                        class="oe_highlight"
                        string="Check Connection"
                        attrs="{'invisible':[('state', 'not in', ['draft'])]}"
                    />
                    <button
                        name="button_reset_to_draft"
                        type="object"
                        string="Reset To draft Connection"
                        attrs="{'invisible':[('state', 'in', ['draft'])]}"
                    />
                    <field name="state" widget="statusbar" readonly="1" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <widget
                            name="web_ribbon"
                            title="Archived"
                            bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"
                        />
                        <field name="active" invisible="1" />
                    </div>
                    <h1>
                        <field
                            name="name"
                            class="oe_inline"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                        />
                    </h1>
                    <group>
                        <group>
                            <field
                                name="url"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                            <field
                                name="consumer_key"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                        </group>
                        <group>

                            <field name="version" />
                            <field
                                name="consumer_secret"
                                password="True"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                        </group>
                    </group>
                    <notebook>
                        <page name="synchronizers" string="Synchronizers">
                            <p class="oe_grey oe_inline">
                                By clicking on the buttons,
                                you will initiate the
                                synchronizations
                                with WooCommerce.
                                Note that the import or exports
                                won't be done directly,
                                they will create 'Jobs'
                                executed as soon
                                as possible.
                            </p>
                            <group>
                                <div>
                                    <label
                                        string="Export Products Since"
                                        class="oe_inline"
                                        for="export_products_since_date"
                                    />
                                    <field
                                        name="export_products_since_date"
                                        class="oe_inline"
                                        nolabel="1"
                                    />
                                </div>
                                <button
                                    name="export_products_since"
                                    type="object"
                                    class="oe_highlight"
                                    string="Export in background"
                                />
                            </group>
                            <group>
                                <div>
                                    <label
                                        string="Export Sale Orders Since"
                                        class="oe_inline"
                                        for="export_sale_orders_since_date"
                                    />
                                    <field
                                        name="export_sale_orders_since_date"
                                        class="oe_inline"
                                        nolabel="1"
                                    />
                                </div>
                                <button
                                    name="export_sale_orders_since"
                                    type="object"
                                    class="oe_highlight"
                                    string="Export in background"
                                />
                            </group>
                            <group>
                                <div>
                                    <label
                                        string="Import Sale Orders Since"
                                        class="oe_inline"
                                        for="import_sale_order_since_date"
                                    />
                                    <field
                                        name="import_sale_order_since_date"
                                        class="oe_inline"
                                        nolabel="1"
                                    />
                                </div>
                                <button
                                    name="import_sale_orders_since"
                                    type="object"
                                    class="oe_highlight"
                                    string="Import in background"
                                />
                            </group>
                            <group>
                                <div>
                                    <label
                                        string="Export Product Template Since"
                                        class="oe_inline"
                                        for="export_product_tmpl_since_date"
                                    />
                                    <field
                                        name="export_product_tmpl_since_date"
                                        class="oe_inline"
                                        nolabel="1"
                                    />
                                </div>
                                <button
                                    name="export_product_tmpl_since"
                                    type="object"
                                    class="oe_highlight"
                                    string="Export in background"
                                />
                            </group>
                            <group>
                                <div>
                                    <label
                                        string="Export Product Public Categories Since"
                                        class="oe_inline"
                                        for="export_product_public_category_since_date"
                                    />
                                    <field
                                        name="export_product_public_category_since_date"
                                        class="oe_inline"
                                        nolabel="1"
                                    />
                                </div>
                                <button
                                    name="export_product_public_category_since"
                                    type="object"
                                    class="oe_highlight"
                                    string="Export in background"
                                />
                            </group>
                            <group>
                                <div>
                                    <label
                                        string="Export Product Attribute Since"
                                        class="oe_inline"
                                        for="export_product_attribute_since_date"
                                    />
                                    <field
                                        name="export_product_attribute_since_date"
                                        class="oe_inline"
                                        nolabel="1"
                                    />
                                </div>
                                <button
                                    name="export_product_attribute_since"
                                    type="object"
                                    class="oe_highlight"
                                    string="Export in background"
                                />
                            </group>
                            <group>
                                <div>
                                    <label
                                        string="Export Product Attribute Value Since"
                                        class="oe_inline"
                                        for="export_product_attribute_value_since_date"
                                    />
                                    <field
                                        name="export_product_attribute_value_since_date"
                                        class="oe_inline"
                                        nolabel="1"
                                    />
                                </div>
                                <button
                                    name="export_product_attribute_value_since"
                                    type="object"
                                    class="oe_highlight"
                                    string="Export in background"
                                />
                            </group>
                        </page>
                        <page name="mappings" string="Mappings">
                            <group string="Payment Mode">
                                <field name="payment_mode_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="payment_mode_id" />
                                        <field name="woocommerce_payment_mode" />
                                        <field name="company_id" invisible="1" />
                                    </tree>
                                </field>
                            </group>
                            <group string="Order Tax">
                                <field name="tax_map_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="account_tax" />
                                        <field name="woocommerce_tax_rate_id" />
                                    </tree>
                                </field>
                            </group>
                            <group string="Product tax">
                                <field name="tax_class_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="account_tax" />
                                        <field name="woocommerce_tax_class" />
                                    </tree>
                                </field>
                            </group>
                            <group name="shipping" string="Shipping">
                                <group>
                                    <field name="shipping_product_id" />
                                </group>
                            </group>
                        </page>
                        <page name="other_info" string="Other Info">
                            <group>
                                <field name="verify_ssl" />
                                <field name="chunk_size" />
                                <field name="page_size" />
                                <field name="language_id" />
                                <field
                                    name="stock_location_ids"
                                    widget="many2many_tags"
                                />
                                <field name="discount_pricelist_id" />
                                <field name="use_main_product_image" />
                            </group>
                            <group>
                                <field
                                    name="wordpress_backend_id"
                                    options="{'no_create': True}"
                                />
                                <field name="client_order_ref_prefix" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="woocommerce_backend_view_tree" model="ir.ui.view">
        <field name="name">woocommerce.backend.tree</field>
        <field name="model">woocommerce.backend</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="url" />
                <field name="consumer_key" />
                <field name="consumer_secret" />
                <field name="version" />
            </tree>
        </field>
    </record>
    <record id="woocommerce_backend_action" model="ir.actions.act_window">
        <field name="name">WooCommerce Backends</field>
        <field name="res_model">woocommerce.backend</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
