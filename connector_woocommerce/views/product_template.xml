<odoo>
    <record id="connector_product_template_view_form" model="ir.ui.view">
        <field name="name">product.template.connector.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field
            name="groups_id"
            eval="[(4, ref('connector.group_connector_manager'))]"
        />
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook" position="inside">
                <page string="Connector WooCommerce" name="connector_woocommerce">
                    <group string="WooCommerce Bindings">
                        <field name="woocommerce_bind_ids" nolabel="1" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record
        id="website_sale_public_description_product_template_view_form"
        model="ir.ui.view"
    >
        <field name="name">product.template.website.sale.public.description.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="website_sale.product_template_form_view" />
        <field name="arch" type="xml">
            <field name="website_sequence" position="before">
                <field
                    name="woocommerce_enabled"
                    attrs="{'readonly': [('woocommerce_enabled', '=', True), ('woocommerce_bind_ids', '!=', [])]}"
                />
                <field name="woocommerce_bind_ids" invisible="1" />
            </field>
        </field>
    </record>
    <record id="woocommerce_product_template_view_form" model="ir.ui.view">
        <field name="name">woocommerce.product.template.view.form</field>
        <field name="model">woocommerce.product.template</field>
        <field name="arch" type="xml">
            <form string="WooCommerce Product Template">
                <group>
                    <field name="backend_id" />
                    <field name="odoo_id" readonly="True" />
                    <field name="woocommerce_idproduct" readonly="True" />
                    <field name="sync_date" readonly="True" />
                </group>
            </form>
        </field>
    </record>
    <record id="woocommerce_product_template_view_tree" model="ir.ui.view">
        <field name="name">woocommerce.product.template.view.tree</field>
        <field name="model">woocommerce.product.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="backend_id" />
                <field name="odoo_id" />
                <field name="woocommerce_idproduct" readonly="True" />
                <field name="sync_date" />
                <button
                    name="resync_export"
                    type="object"
                    string="Resynchronize"
                    icon="fa-refresh fa-lg"
                />
            </tree>
        </field>
    </record>
    <record id="woocommerce_product_template_action" model="ir.actions.act_window">
        <field name="name">Product Template</field>
        <field name="res_model">woocommerce.product.template</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
