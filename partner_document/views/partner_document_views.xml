<odoo>
    <record id="partner_document_view_form" model="ir.ui.view">
        <field name="name">partner.document.view.form</field>
        <field name="model">partner.document</field>
        <field name="arch" type="xml">
            <form string="Partner Form">
                <sheet>
                    <group>
                        <group>
                            <field
                                name="document_type_id"
                                domain="[('id', 'in', partner_class_mandatory_document_type_ids)]"
                            />

                        </group>
                    </group>
                    <group col="4">
                        <field name="datas" filename="datas_fname" />
                        <field name="datas_fname" invisible="1" />
                    </group>
                    <group>
                        <field name="description" />
                    </group>
                    <field name="partner_classification_id" invisible="1" />
                    <field
                        name="partner_class_mandatory_document_type_ids"
                        invisible="1"
                    />
                </sheet>
            </form>
        </field>
    </record>

    <record id="partner_document_view_tree" model="ir.ui.view">
        <field name="name">partner.document.view.tree</field>
        <field name="model">partner.document</field>
        <field name="arch" type="xml">
            <tree>
                                <field name="document_type_id" />
                <field name="datas_fname" />
                <field name="description" />
            </tree>
        </field>
    </record>
</odoo>
