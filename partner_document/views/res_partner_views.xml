<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <!--        TODO: Make it work-->
        <!--         <field-->
        <!--            name="groups_id"-->
        <!--            eval="[(6, False, [ref('partner_document.partner_document_group_guest')])]"-->
        <!--        />-->
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Documents">
                    <group>
                        <field name="classification_id" />
                    </group>
                    <field name="document_ids">
                        <tree editable="bottom" decoration-danger="expired">
                            <field
                                name="partner_class_mandatory_document_type_ids"
                                invisible="1"
                            />
                            <field
                                name="document_type_id"
                                domain="[('id', 'in', partner_class_mandatory_document_type_ids)]"
                            />
                            <field name="description" />
                            <field name="partner_classification_id" />
                            <field name="datas" filename="datas_fname" />
                            <field name="datas_fname" invisible="1" />
                            <field name="expiration_date" />
                            <field name="expired" invisible="1" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
