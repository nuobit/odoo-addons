<odoo>
    <record id="partner_classification_view_form" model="ir.ui.view">
        <field name="name">partner.classification.view.form</field>
        <field name="model">partner.classification</field>
        <field name="arch" type="xml">
            <form string="Partner classification Form">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name" />
                        </h1>
                    </div>
                    <group>
                        <group col="4">
<!--                        <field name="level_type" />-->
                        <field name="document_type_ids" widget="many2many_tags" />
<!--                                       attrs="{'invisible': [('level_type', '!=', 'criticality')], 'required': [('level_type', '=', 'criticality')]}"-->
                    </group>
                        <group>
                            <field name="default" />
                        </group>
                    </group>

                    <group>
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="partner_classification_view_tree" model="ir.ui.view">
        <field name="name">partner.classification.view.tree</field>
        <field name="model">partner.classification</field>
        <field name="arch" type="xml">
            <tree>
<!--                <field name="complete_name" />-->
                <field name="name" />

<!--                <field name="level_type" />-->
                <field name="document_type_ids" widget="many2many_tags" />

            </tree>
        </field>
    </record>

    <record id="partner_classification_list_action" model="ir.actions.act_window">
        <field name="name">Classifications</field>
        <field name="res_model">partner.classification</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first classification
            </p>
        </field>
    </record>

    <menuitem
        id="partner_classification_menu"
        name="Classifications"
        parent="partner_document.partner_document_menu"
        action="partner_classification_list_action"
        sequence="10"
    />
</odoo>
