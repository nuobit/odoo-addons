<odoo>
    <record id="veloconnect_backend_view_form" model="ir.ui.view">
        <field name="name">veloconnect.backend.form</field>
        <field name="model">veloconnect.backend</field>
        <field name="arch" type="xml">
            <form string="veloconnect Backend">
                <header>
                    <button name="button_check_connection" type="object" class="oe_highlight"
                            string="Check Connection" attrs="{'invisible':[('state', 'not in', ['draft'])]}"/>
                    <button name="button_reset_to_draft" type="object"
                            string="Reset To draft Connection" attrs="{'invisible':[('state', 'in', ['draft'])]}"/>
                    <field name="state" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <widget
                            name="web_ribbon"
                            title="Archived"
                            bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"
                        />
                        <field name="active" invisible="1"/>
                    </div>
                    <h1>
                        <field name="name" class="oe_inline" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </h1>
                    <group>
                        <group>
                            <field name="company_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="user_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="buyer"/>
                            <field name="password" password="True"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="url"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="chunk_size"/>
                            <field name="product_search_retry_time"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="import" string="Imports">
                            <p class="oe_grey oe_inline">
                                By clicking on the buttons,
                                you will initiate the
                                synchronizations
                                with Veloconnect.
                                Note that the import or exports
                                won't be done directly,
                                they will create 'Jobs'
                                executed as soon
                                as possible.
                            </p>
                            <p class="oe_grey oe_inline">
                                Once imported,
                                some types of records,
                                like sale orders,
                                need a manual review.
                                You will find the list
                                of the
                                new records to review
                                in the menu 'Connectors > Checkpoint'.
                            </p>
                            <group>
                                <div>
                                    <label string="Import Products"
                                           class="oe_inline"
                                           for="import_products_name"/>
                                    <field name="import_products_name" class="oe_inline"
                                           nolabel="1"/>
                                    <!--<field name="import_sale_orders_since_date" class="oe_inline"-->
                                    <!-- nolabel="1"/>-->
                                </div>
                                <button name="import_products" type="object"
                                        class="oe_highlight" string="Import in background"/>
                            </group>
                        </page>
                        <page name="mappings" string="Mappings">
                            <group string="Product UOM">
                                <field name="product_uom_ids" nolabel="1"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="uom_id"/>
                                        <field name="quantityunitcode"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="veloconnect_backend_view_tree" model="ir.ui.view">
        <field name="name">veloconnect.backend.tree</field>
        <field name="model">veloconnect.backend</field>
        <field name="arch" type="xml">
            <tree string="veloconnect Backend">
                <field name="name"/>
                <field name="company_id"/>
                <field name="buyer"/>
                <field name="url"/>
            </tree>
        </field>
    </record>

    <record id="veloconnect_backend_action" model="ir.actions.act_window">
        <field name="name">Veloconnect Backends</field>
        <field name="res_model">veloconnect.backend</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>



