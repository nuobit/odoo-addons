<odoo>
    <record id="project_search" model="ir.ui.view">
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project_category.project_search" />
        <field name="arch" type="xml">
            <field name="type_id" position="after">
                <field name="parent_type_id" />
            </field>
            <group expand="0">
                <filter
                    string="Parent Type"
                    name="parent_type_id"
                    help="Parent Type"
                    context="{'group_by':'parent_type_id'}"
                />
            </group>
        </field>
    </record>
</odoo>
