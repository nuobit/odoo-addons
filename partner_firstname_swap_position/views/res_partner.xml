<odoo>
    <record id="view_partner_simple_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="partner_firstname.view_partner_simple_form" />
        <field name="arch" type="xml">
            <field name="lastname" position="before">
                <field name="firstname" position="move" />
            </field>
        </field>
    </record>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@class='oe_edit_only']//field[@name='lastname']"
                position="before"
            >
                <xpath
                    expr="//div[@class='oe_edit_only']//field[@name='firstname']"
                    position="move"
                />
            </xpath>
            <xpath
                expr="//field[@name='child_ids']/form//field[@name='lastname']"
                position="after"
            >
                <xpath
                    expr="//field[@name='child_ids']/form//field[@name='firstname']"
                    position="move"
                />
            </xpath>
        </field>
    </record>
</odoo>
