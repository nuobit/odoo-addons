<odoo>
    <record
        id="connector_woocommerce_wpml_product_attribute_view_form"
        model="ir.ui.view"
    >
        <field name="name">product.attribute.connector.form</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form" />
        <field
            name="groups_id"
            eval="[(4, ref('connector.group_connector_manager'))]"
        />
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook" position="inside">
                <page
                    string="Connector WooCommerce WPML"
                    name="connector_woocommerce_wpml"
                >
                    <group string="WooCommerce WPML Bindings">
                        <field name="woocommerce_wpml_bind_ids" nolabel="1" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="woocommerce_wpml_product_attribute_view_form" model="ir.ui.view">
        <field name="name">woocommerce.wpml.product.attribute.view.form</field>
        <field name="model">woocommerce.wpml.product.attribute</field>
        <field name="arch" type="xml">
            <form string="WooCommerce WPML Product Template">
                <group>
                    <field name="backend_id" />
                    <field name="odoo_id" readonly="True" />
                    <field name="woocommerce_wpml_idattribute" readonly="True" />
                    <field name="sync_date" readonly="True" />
                </group>
            </form>
        </field>
    </record>
    <record id="woocommerce_wpml_product_attribute_view_tree" model="ir.ui.view">
        <field name="name">woocommerce.wpml.product.attribute.view.tree</field>
        <field name="model">woocommerce.wpml.product.attribute</field>
        <field name="arch" type="xml">
            <tree>
                <field name="backend_id" />
                <field name="odoo_id" />
                <field name="woocommerce_wpml_idattribute" readonly="True" />
                <field name="sync_date" />
                <button
                    name="resync_export"
                    type="object"
                    string="Resynchronize"
                    icon="fa-refresh fa-lg"
                />
            </tree>
        </field>
    </record>
    <record
        id="woocommerce_wpml_product_attribute_action"
        model="ir.actions.act_window"
    >
        <field name="name">Product Attribute</field>
        <field name="res_model">woocommerce.wpml.product.attribute</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
