<odoo>
    <record
        id="connector_woocommerce_wpml_product_product_view_form_easy_inherit"
        model="ir.ui.view"
    >
        <field
            name="name"
        >connector.woocommerce.wpml.product.product.view.form.easy.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view" />
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook" position="inside">
                <page string="Connector WooCommerce WPML" name="connector_woocommerce">
                    <group string="WooCommerce WPML Bindings">
                        <field name="woocommerce_wpml_bind_ids" nolabel="1" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="connector_wpml_product_product_view_form" model="ir.ui.view">
        <field name="name">product.product.connector.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field
            name="groups_id"
            eval="[(4, ref('connector.group_connector_manager'))]"
        />
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook" position="inside">
                <page
                    string="Connector WooCommerce WPML"
                    name="connector_woocommerce_wpml"
                >
                    <group string="WooCommerce WPML Bindings">
                        <field name="woocommerce_wpml_bind_ids" nolabel="1" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="woocommerce_wpml_product_product_view_form" model="ir.ui.view">
        <field name="name">woocommerce.wpml.product.product.view.form</field>
        <field name="model">woocommerce.wpml.product.product</field>
        <field name="arch" type="xml">
            <form string="WooCommerce WPML Product Product">
                <group>
                    <field name="backend_id" />
                    <field name="odoo_id" readonly="True" />
                    <field name="woocommerce_wpml_idproduct" readonly="True" />
                    <field name="woocommerce_wpml_idparent" readonly="True" />
                    <field name="woocommerce_lang" />
                    <field name="sync_date" readonly="True" />
                </group>
            </form>
        </field>
    </record>
    <record id="woocommerce_wpml_product_product_view_tree" model="ir.ui.view">
        <field name="name">woocommerce.wpml.product.product.view.tree</field>
        <field name="model">woocommerce.wpml.product.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="backend_id" />
                <field name="odoo_id" />
                <field name="woocommerce_wpml_idproduct" readonly="True" />
                <field name="woocommerce_wpml_idparent" readonly="True" />
                <field name="woocommerce_lang" />
                <field name="sync_date" />
                <button
                    name="resync_export"
                    type="object"
                    string="Resynchronize"
                    icon="fa-refresh fa-lg"
                />
            </tree>
        </field>
    </record>
    <record id="woocommerce_wpml_product_product_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">woocommerce.wpml.product.product</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
