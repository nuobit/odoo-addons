<odoo>
    <!-- view product review -->
    <record id="product_review_form_view" model="ir.ui.view">
        <field name="name">lighting.product.review.form</field>
        <field name="model">lighting.product.review</field>
        <field name="arch" type="xml">
            <form string="Product review">
                <header/>
                <sheet>
                    <group col="4">
                        <field name="package_id"/>
                        <field name="product_id"/>
                    </group>
                    <group col="4">
                        <field name="reviewed"/>
                        <field name="date"/>
                    </group>
                    <group>
                        <field name="comment"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="product_review_tree_view" model="ir.ui.view">
        <field name="name">product.review.tree</field>
        <field name="model">lighting.product.review</field>
        <field name="arch" type="xml">
            <tree string="Product review">
                <field name="package_id"/>
                <field name="product_id"/>
                <field name="reviewed"/>
                <field name="date"/>
                <field name="comment"/>
            </tree>
        </field>
    </record>

    <!-- search product review -->
    <record id="product_review_search_view" model="ir.ui.view">
        <field name="name">lighting.product.review.search</field>
        <field name="model">lighting.product.review</field>
        <field name="arch" type="xml">
            <search>
                <field name="package_id" string="Product review"
                       filter_domain="['|', ('package_id.name','ilike',self), ('product_id.reference','ilike',self)]"/>
                <field name="package_id" string="Package"
                       filter_domain="[('package_id.name','ilike',self)]"/>
                <field name="product_id" string="Product"
                       filter_domain="[('product_id.reference','ilike',self)]"/>
                <separator/>
                <filter string="Reviewed" name="reviewed"
                        domain="[('reviewed', '=', True)]"/>
                <filter string="Pending" name="pending"
                        domain="[('reviewed', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Reviewed" name="groupby_reviewed" domain="[]"
                            context="{'group_by': 'reviewed'}"/>
                    <filter string="Package" name="groupby_package_id" domain="[]"
                            context="{'group_by': 'package_id'}"/>
                    <filter string="Product" name="groupby_product_id" domain="[]"
                            context="{'group_by': 'product_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ================================ WINDOWS =========================== -->
    <!-- window action product review class -->
    <record id="product_review_action" model="ir.actions.act_window">
        <field name="name">Product review</field>
        <field name="res_model">lighting.product.review</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_pending': 1}</field>
    </record>

    <!-- menu product review -->
    <menuitem id="product_reviewss_menu" name="Reviews" parent="lighting_review_menu"
              action="product_review_action"/>
</odoo>