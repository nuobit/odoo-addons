<odoo>
    <template id="index">
        &lt;!DOCTYPE html&gt;
        <html lang="es">
            <head>
                <!-- Required meta tags -->
                <meta charset="utf-8" />
                <meta
                    name="viewport"
                    content="width=device-width, initial-scale=1, shrink-to-fit=no"
                />

                <!-- Bootstrap CSS -->
                <link
                    rel="stylesheet"
                    href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
                    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
                    crossorigin="anonymous"
                />

                <title>CBL</title>
                <!--style>
                    .logo {
                    background-color: rgba(0,0,0,0.5);
                    padding-left: 10px;
                    padding-right: 10px;
                    padding-top: 5px;
                    width: 250px;
                    text-align: left;
                    padding-bottom: 5px;
                    }
                </style-->
            </head>
            <body>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-2">
                            <div class="logo">
                                <img
                                    src="https://clientes.cbl-logistica.com/images/logocbl.png"
                                    class="img-fluid"
                                    alt="Responsive image"
                                />
                            </div>
                        </div>
                    </div>
                    <t t-foreach="expeditions" t-as="e">
                        <div>
                            <p>
                                <h3 t-esc="e['Referencia']" />
                            </p>
                            <form>
                                <fieldset disabled="disabled">
                                    <div class="form-row">
                                        <div class="form-group col-md-4">
                                            <label for="inputOrigen">Origen</label>
                                            <input
                                                type="text"
                                                class="form-control"
                                                id="inputOrigen"
                                                t-att-value="e['Origen']"
                                            />
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label for="inputDestino">Destino</label>
                                            <input
                                                type="text"
                                                class="form-control"
                                                id="inputDestino"
                                                t-att-value="e['Destino']"
                                            />
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label for="inputPortes">Portes</label>
                                            <input
                                                type="text"
                                                class="form-control"
                                                id="inputPortes"
                                                t-att-value="e['Portes']"
                                            />
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-3">
                                            <label for="inputBultos">Bultos</label>
                                            <input
                                                type="text"
                                                class="form-control"
                                                id="inputBultos"
                                                t-att-value="e['Bultos']"
                                            />
                                        </div>
                                        <div class="form-group col-md-3">
                                            <label for="inputPalets">Palets</label>
                                            <input
                                                type="text"
                                                class="form-control"
                                                id="inputPalets"
                                                t-att-value="e['Palets']"
                                            />
                                        </div>
                                        <div class="form-group col-md-3">
                                            <label for="inputPVKilos">Peso</label>
                                            <input
                                                type="text"
                                                class="form-control"
                                                id="inputPVKilos"
                                                t-att-value="e['PVKilos']"
                                            />
                                        </div>
                                        <div class="form-group col-md-3">
                                            <label for="inputVolumen">Volumen</label>
                                            <input
                                                type="text"
                                                class="form-control"
                                                id="inputVolumen"
                                                t-att-value="e['Volumen']"
                                            />
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-4">
                                            <label
                                                for="inputFechaRecogida"
                                            >Fecha de recogida</label>
                                            <input
                                                type="text"
                                                class="form-control"
                                                id="inputFechaRecogida"
                                                t-att-value="e['FechaRecogida']"
                                            />
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label
                                                for="inputFechaEntrega"
                                            >Fecha de entrega</label>
                                            <input
                                                type="text"
                                                class="form-control"
                                                id="inputFechaEntrega"
                                                t-att-value="e['FechaEntrega']"
                                            />
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                            <p>
                                <h4>Tracking</h4>
                            </p>
                            <t t-set="tracking" t-value="e['Tracking']" />
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover">
                                            <thead>
                                                <th>Fecha</th>
                                                <th>Acci√≥n</th>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="tracking" t-as="t">
                                                    <tr>
                                                        <td t-esc="t['FECHA']" />
                                                        <td t-esc="t['DESFTI']" />
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>

                <!-- Optional JavaScript -->
                <!-- jQuery first, then Popper.js, then Bootstrap JS -->
                <script
                    src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
                    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
                    crossorigin="anonymous"
                />
                <script
                    src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
                    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
                    crossorigin="anonymous"
                />
                <script
                    src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
                    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
                    crossorigin="anonymous"
                />
            </body>
        </html>
    </template>
</odoo>
