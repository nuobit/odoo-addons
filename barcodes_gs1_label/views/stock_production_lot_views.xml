<odoo>
    <record id="view_production_lot_form" model="ir.ui.view">
        <field name="name">production_lot_form_view.inherit.barcodes_gs1_label</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button
                        name="print_gs1_barcode_wizard"
                        string="Print barcode"
                        type="object"
                        class="o_sale_print"
                    />
                </header>
            </xpath>
            <group name="main_group" position="after">
                <group>
                    <field name="gs1_generated" />
                </group>
            </group>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute
                    name="attrs"
                >{'readonly': [('gs1_generated', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='ref']" position="attributes">
                <attribute
                    name="attrs"
                >{'readonly': [('gs1_generated', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
