<odoo>
    <record id="paperformat_gs1_barcodes" model="report.paperformat">
        <field name="name">Barcodes A4 Portrait</field>
        <!--field name="default" eval="True"/-->
        <field name="format">A4</field>
        <!--field name="page_height">80</field>
        <field name="page_width">175</field-->
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_spacing">0</field>
        <field name="header_line" eval="False"/>
        <field name="dpi">90</field>
    </record>

    <report id="action_report_product_gs1_barcodes"
            string="Print barcodes"
            model="product.product"
            report_type="qweb-pdf"
            menu="False"
            file="barcodes_gs1_label.report_gs1_barcode"
            name="barcodes_gs1_label.report_gs1_barcode"
            paperformat="barcodes_gs1_label.paperformat_gs1_barcodes"
            print_report_name="'Barcodes - %s' % (object.default_code, )"/>

    <report id="action_report_lot_gs1_barcodes"
            string="Print barcodes"
            model="stock.production.lot"
            report_type="qweb-pdf"
            menu="False"
            file="barcodes_gs1_label.report_gs1_barcode"
            name="barcodes_gs1_label.report_gs1_barcode"
            paperformat="barcodes_gs1_label.paperformat_gs1_barcodes"
            print_report_name="'Barcodes - %s' % (object.name, )"/>
</odoo>
