<odoo>
    <record id="mrp_production_batch_wizard_view_form" model="ir.ui.view">
        <field name="name">mrp.production.batch.wizard.form</field>
        <field name="model">mrp.production.batch.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Batch">
                <div class="oe_clear" />
                <group>
                    <field
                        name="operation_type"
                        domain="[('code','=','mrp_operation_batch'),('warehouse_id','=',warehouse_id)]"
                    />
                    <field name="warehouse_id" invisible="1" />
                </group>
                <footer>
                    <button
                        name="action_mrp_production_batch_group"
                        string="Create and View Batch"
                        type="object"
                        class="btn-primary"
                        data-hotkey="y"
                    />
                    <button
                        string="Cancel"
                        class="btn-secondary"
                        special="cancel"
                        data-hotkey="n"
                    />
                </footer>
            </form>
        </field>
    </record>
    <record id="mrp_production_batch_wizard_action" model="ir.actions.act_window">
        <field name="name">Import partners</field>
        <field name="res_model">mrp.production.batch.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
