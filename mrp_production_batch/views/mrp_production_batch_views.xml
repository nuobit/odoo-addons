<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mrp_production_batch_view_tree" model="ir.ui.view">
        <field name="name">mrp.production.batch.tree</field>
        <field name="model">mrp.production.batch</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="production_ids" widget="many2many_tags" />
                <field name="product_ids" widget="many2many_tags" />
                <field name="creation_date" />
                <field name="state" />
            </tree>
        </field>
    </record>
    <record id="mrp_production_batch_view_form" model="ir.ui.view">
        <field name="name">mrp.production.batch.form</field>
        <field name="model">mrp.production.batch</field>
        <field name="arch" type="xml">
            <form string="Production Batches">
                <header>
                    <button
                        name="action_check"
                        id="action_check"
                        string="Check Productions"
                        class="btn-primary"
                        type="object"
                        attrs="{'invisible': [('to_review_production_count', '=', 0)]}"
                    />
                    <button
                        name="action_done"
                        id="action_confirm"
                        string="Confirm Production"
                        class="btn-primary"
                        type="object"
                        attrs="{'invisible': ['|', '|', ('to_review_production_count', '!=', 0), ('production_ids', '=', []), ('state', '=', 'done')]}"
                    />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="action_view_total_production"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-list"
                            attrs="{'invisible': [('production_ids', '=', False)]}"
                        >
                            <field
                                name="total_production_count"
                                widget="statinfo"
                                string="Total"
                            />
                        </button>
                        <button
                            name="action_view_production_to_review"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-clock-o"
                            attrs="{'invisible': ['|', ('production_ids', '=', False), ('state', '=', 'done')]}"
                        >
                            <field
                                name="to_review_production_count"
                                widget="statinfo"
                                string="To review"
                            />
                        </button>
                        <button
                            name="action_view_production_ready"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-check"
                            attrs="{'invisible': ['|', ('production_ids', '=', False), ('state', '=', 'done')]}"
                        >
                            <field
                                name="ready_production_count"
                                widget="statinfo"
                                string="Ready"
                            />
                        </button>
                    </div>
                    <div class="oe_highlight">
                        <h1>
                            <span
                                attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('name', '!=', '/')]}"
                            >Draft</span>
                        </h1>
                        <h1 class="mt0" attrs="{'invisible':[('name', '=', '/')]}">
                            <field
                                name="name"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="creation_date" />
                        </group>
                        <group>
                            <field
                                name="operation_type"
                                attrs="{'readonly': [('production_ids', '!=', [])]}"
                            />
                        </group>
                    </group>
                    <field name="production_ids" invisible="1" />
                </sheet>
            </form>
        </field>
    </record>
    <record id="mrp_production_batch_view_search" model="ir.ui.view">
        <field name="name">mrp.production.batch.search</field>
        <field name="model">mrp.production.batch</field>
        <field name="arch" type="xml">
            <search string="Search Production Batch">
                <field name="state" invisible="1" />
                <filter string="To Do" name="todo" domain="[('state', '!=', 'done')]" />
                <filter
                    string="In Progress"
                    name="in_progress"
                    domain="[('state', '=', 'in_progress')]"
                />
                <filter string="Done" name="done" domain="[('state', '=', 'done')]" />
           </search>
        </field>
    </record>
    <record
        id="mrp_production_batch_action_picking_dashboard"
        model="ir.actions.act_window"
    >
        <field name="name">Manufacturing Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.production.batch</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" eval="False" />
        <field name="search_view_id" ref="mrp_production_batch_view_search" />
        <field name="domain">[('operation_type', '=', active_id)]</field>
        <field name="context">{'default_picking_type_id': active_id}</field>
    </record>
    <record id="mrp_production_batch" model="ir.actions.act_window">
        <field name="name">Batch Production</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.production.batch</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_todo': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Batch Production order found
            </p>
            <p>
                Batch production is used to group several production orders
            </p>
        </field>
    </record>
    <record id="mrp_production_batch_action" model="ir.actions.act_window">
        <field name="name">Invoice batches</field>
        <field name="res_model">mrp.production.batch</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="mrp_production_batch_form_action" model="ir.actions.act_window">
        <field name="name">Batch Production</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.production.batch</field>
        <field name="view_mode">form</field>
    </record>
</odoo>
