<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <menuitem
        id="menu_mrp_production_batch"
        name="Production Batches"
        parent="mrp.menu_mrp_manufacturing"
        action="mrp_production_batch"
        sequence="21"
    />
    <data>
        <record id="mrp_production_tree_view" model="ir.ui.view">
            <field name="name">mrp.production.tree.inherit</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_tree_view" />
            <field name="arch" type="xml">
                <button name="button_plan" position="after">
                    <button
                        name="mrp_production_batch_create_wizard_action"
                        type="object"
                        string="Batch Production"
                        class="oe_highlight"
                    />
                </button>
                <field name="product_id" position="before">
                    <field name="production_batch_id" />
                </field>
            </field>
        </record>
        <record id="mrp_production_form_view" model="ir.ui.view">
            <field name="name">mrp.production.form.inherit</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <field name="is_ready_to_produce" invisible="1" />
                    <div
                        class="alert alert-success alert-link text-center"
                        role="alert"
                        attrs="{'invisible': ['|', ('production_batch_id', '=', False), '|', ('is_ready_to_produce', '=', False), ('state', '=', 'done')]}"
                    >
                        The production is ready to produce in batch.
                    </div>
                    <div
                        class="alert alert-danger alert-link text-center"
                        role="alert"
                        attrs="{'invisible': ['|', ('production_batch_id', '=', False), '|', ('is_ready_to_produce', '=', True), ('error_message', '=', False)]}"
                    >
                        <field name="error_message" readonly="1" no_label="1" />
                    </div>
                </xpath>
                <field name="confirm_cancel" position="before">
                    <button
                        name="action_produce_batch"
                        type="object"
                        string="Check Production"
                        class="oe_highlight"
                        attrs="{'invisible': ['|', ('production_batch_id', '=', False), ('state', 'in', ('done', 'draft'))]}"
                    />
                </field>
                <page name="miscellaneous" position="inside">
                    <group>
                        <group>
                            <field
                                name="production_batch_id"
                                attrs="{'readonly': [('state', '=', 'done')]}"
                                domain="[('state', 'in', ('draft', 'in_progress'))]"
                            />
                        </group>
                    </group>
                </page>
                <div name="button_box" position="inside">
                    <button
                        name="action_view_production_batch"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-list"
                        string=""
                        attrs="{'invisible': [('production_batch_id', '=', False)]}"
                    >
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Production Batch</span>
                        </div>
                        <field name="production_batch_id" invisible="1" />
                    </button>
                </div>
                <xpath
                    expr="//button[@name='button_mark_done'][1]"
                    position="attributes"
                >
                    <attribute name="attrs">{'invisible': [
                        '|',
                        ('production_batch_id', '!=', False),
                        '|',
                        ('state', 'in', ('draft', 'cancel', 'done', 'to_close')),
                        ('qty_producing', '=', 0)
                    ]}</attribute>
                </xpath>
                <xpath
                    expr="//button[@name='button_mark_done'][2]"
                    position="attributes"
                >
                    <attribute name="attrs">{'invisible': [
                        '|',
                        ('production_batch_id', '!=', False),
                        '&amp;',
                        '|',
                        ('state', 'not in', ('confirmed', 'progress')),
                        ('qty_producing', '!=', 0),
                        ('state', '!=', 'to_close')
                    ]}</attribute>
                </xpath>
                <field name="lot_producing_id" position="attributes">
                    <attribute name="attrs">
                        {'invisible': [('product_tracking', 'in', ('none', False))], 'readonly': [('production_batch_id', '!=', False)]}
                    </attribute>
                </field>
            </field>
        </record>
        <record
            id="mrp.mrp_production_action_picking_deshboard"
            model="ir.actions.act_window"
        >
            <field
                name="domain"
            >[('picking_type_id', '=', active_id), ('production_batch_id', '=', False)]</field>
        </record>
    </data>
</odoo>
