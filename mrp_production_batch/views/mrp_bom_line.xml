<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mrp_bom_line_view_form" model="ir.ui.view">
        <field name="model">mrp.bom.line</field>
        <field name="inherit_id" ref="mrp.mrp_bom_line_view_form" />
        <field name="arch" type="xml">
            <field name="bom_product_template_attribute_value_ids" position="after">
                <field name="use_in_batch" />
            </field>
        </field>
    </record>

    <record id="mrp_bom_view_form" model="ir.ui.view">
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_line_ids']/tree" position="inside">
                <field name="use_in_batch" />
            </xpath>
        </field>
    </record>
</odoo>
