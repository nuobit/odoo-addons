<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[hasclass('app_settings_block') and @data-key='mrp']"
                position="inside"
            >
                <h2>Production batch configuration</h2>
                <div
                    class="row mt16 o_settings_container"
                    name="production_batch_setting_container"
                >
                    <div
                        class="col-12 col-lg-6 o_setting_box"
                        id="product_availability_setting"
                    >
                        <div
                            class="o_setting_right_pane"
                            name="production_batch_sequence"
                        >
                            <label for="sequence_production_batch_id" />
                            <span
                                class="fa fa-lg fa-building-o"
                                title="Values set here are company-specific."
                                role="img"
                                aria-label="Values set here are company-specific."
                                groups="base.group_multi_company"
                            />
                            <div class="text-muted">
                                Manage production batch
                            </div>
                            <div class="mt16" id="production_batch_setting">
                                <label
                                    for="sequence_production_batch_id"
                                    string="Sequence"
                                    class="col-lg-3 o_light_label"
                                />
                                <field name="sequence_production_batch_id" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
