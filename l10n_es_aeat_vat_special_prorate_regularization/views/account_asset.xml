<odoo>
    <record id="account_asset_view_form" model="ir.ui.view">
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset_management.account_asset_view_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page
                    string="Capital Asset"
                    name="capital_asset"
                >
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="partner_id"/>
                            <field name="partner_vat"/>
                            <field name="move_id"/>
                        </group>
                        <group>
                            <field name="invoice_date"/>
                            <field name="start_date_use"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="amount_currency"/>

                        </group>
                        <group>
                            <!--                            <field name="tax_ids"/>-->
                            <!--                            <field name="iva_ded_prov"/>-->
                            <field name="temp_prorrate_percent"/>
                            <field name="final_prorrate_percent"/>

                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
    <record id="view_l10n_es_aeat_report_capital_assets_form" model="ir.ui.view">
        <field name="name">l10n_es.aeat.mod303.report.capital.assets.form</field>
        <field name="model">l10n.es.aeat.mod303.report</field>
        <field name="inherit_id" ref="l10n_es_aeat.view_l10n_es_aeat_report_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="button_post_capital_assets"
                        string="Create capital assets move"
                        help="This button creates the capital assets regularization move for the selected report"
                        type="object"
                        attrs="{'invisible': [('period_type', 'not in', ('4T', '12'))]}"
                />
                <!--                attrs="{'invisible': ['|', ('state', '!=', 'done'), ('allow_posting', '=', False)]}"/>-->
            </header>
            <group name="group_other_parameters" position="after">
                <group string="Regularization Prorate Parameters" name="Regularization Prorate Parameters"
                       attrs="{'invisible': [('period_type', 'not in', ('4T', '12'))]}">
                    <field name="counterpart_capital_assets_receivable_account_id"
                           string="Counterpart Account Receivable"
                           attrs="{'required': [('period_type', 'in', ('4T', '12'))]}"/>
                    <field name="counterpart_capital_assets_payable_account_id" string="Counterpart Account Payable"
                           attrs="{'required': [('period_type', 'in', ('4T', '12'))]}"/>

                </group>
            </group>
        </field>

    </record>
</odoo>
