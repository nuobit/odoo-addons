<odoo>
    <record id="aeat_map_special_prorrate_year_view_form" model="ir.ui.view">
        <field name="model">aeat.map.special.prorrate.year</field>
        <field name="inherit_id" ref="l10n_es_aeat_vat_special_prorrate.aeat_map_special_prorrate_year_view_form"/>
        <field name="arch" type="xml">

            <header position="inside">
                <button name="first_regularization" type="object" string="1rst regularization" states="finale"/>
            </header>

            <field name="tax_final_percentage_aux" position="after">
                <field name="regularization" states="finale"/>
            </field>
        </field>
    </record>

    <record id="l10n_es_aeat_map_tax_line_prorata_tree" model="ir.ui.view">
        <field name="name">l10n.es.aeat.map.tax.line.prorata.tree</field>
        <field name="model">l10n.es.aeat.map.tax.line</field>
        <field name="inherit_id" ref="l10n_es_aeat.l10n_es_aeat_map_tax_line_tree"/>
        <field name="arch" type="xml">
            <field name="to_regularize" position="after">
                <field name="to_regularize_prorate"/>
            </field>
        </field>
    </record>

    <record id="view_l10n_es_aeat_report_prorate_form" model="ir.ui.view">
        <field name="name">l10n_es.aeat.mod303.report.prorate.form</field>
        <field name="model">l10n.es.aeat.mod303.report</field>
        <field name="inherit_id" ref="l10n_es_aeat.view_l10n_es_aeat_report_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="button_post_prorate"
                        string="Create prorate move"
                        help="This button creates the prorate regularization move for the selected report"
                        type="object"
                        attrs="{'invisible': [('period_type', 'not in', ('4T', '12'))]}"
                />
                <!--                attrs="{'invisible': ['|', ('state', '!=', 'done'), ('allow_posting', '=', False)]}"/>-->
            </header>
            <group name="group_other_parameters" position="after">
                <group string="Regularization Prorate Parameters" name="Regularization Prorate Parameters"
                       attrs="{'invisible': [('period_type', 'not in', ('4T', '12'))]}">
                    <field name="counterpart_prorate_receivable_account_id" string="Counterpart Account Receivable"
                           attrs="{'required': [('period_type', 'in', ('4T', '12'))]}"/>
                    <field name="counterpart_prorate_payable_account_id" string="Counterpart Account Payable"
                           attrs="{'required': [('period_type', 'in', ('4T', '12'))]}"/>

                </group>
            </group>
        </field>

    </record>
</odoo>
