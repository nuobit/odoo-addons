<odoo>
    <record id="view_partner_property_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field
            name="inherit_id"
            ref="account_invoice_batches.view_partner_property_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='invoice_batch_email_partner_id']"
                position="attributes"
            >
                <attribute name="attrs">{
                    'invisible': [('invoice_batch_sending_method', 'not in', ('email', 'emailattachments'))],
                    'required': [('invoice_batch_sending_method', 'in', ('email', 'emailattachments'))]
                }</attribute>
            </xpath>
        </field>
    </record>
</odoo>
