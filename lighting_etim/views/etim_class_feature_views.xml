<odoo>
    <!-- view etim.class.feature -->
    <record id="etim_class_feature_form_view" model="ir.ui.view">
        <field name="name">etim.class.feature.form</field>
        <field name="model">lighting.etim.class.feature</field>
        <field name="arch" type="xml">
            <form string="Etim Class Feature form">
                <sheet>
                    <group>
                        <field name="sequence"/>
                        <field name="feature_id"/>
                        <field name="unit_id"/>
                        <field name="change_code"/>
                        <field name="value_ids">
                            <tree editable="bottom">
                                <field name="value_id"/>
                                <field name="change_code"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>