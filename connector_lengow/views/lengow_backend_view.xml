<odoo>
    <record id="lengow_backend_view_form" model="ir.ui.view">
        <field name="name">lengow.backend.form</field>
        <field name="model">lengow.backend</field>
        <field name="arch" type="xml">
            <form string="Lengow Backend">
                <header>
                    <button name="button_check_connection" type="object" class="oe_highlight"
                            string="Check Connection" attrs="{'invisible':[('state', 'not in', ['draft'])]}"/>
                    <button name="button_reset_to_draft" type="object"
                            string="Reset To draft Connection" attrs="{'invisible':[('state', 'in', ['draft'])]}"/>
                    <field name="state" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="toggle_active"
                                icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <h1>
                        <field name="name" class="oe_inline" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </h1>
                    <group>
                        <group>
                            <field name="company_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="user_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="access_token"/>
                            <field name="secret"/>
                        </group>
                    </group>
                    <group>
                        <field name="base_url"/>
                    </group>
                    <notebook>
                        <page name="import" string="Imports">
                            <p class="oe_grey oe_inline">
                                By clicking on the buttons,
                                you will initiate the
                                synchronizations
                                with Lengow.
                                Note that the import or exports
                                won't be done directly,
                                they will create 'Jobs'
                                executed as soon
                                as possible.
                            </p>
                            <p class="oe_grey oe_inline">
                                Once imported,
                                some types of records,
                                like sale orders,
                                need a manual review.
                                You will find the list
                                of the
                                new records to review
                                in the menu 'Connectors > Checkpoint'.
                            </p>
                            <group>
                                <div>
                                    <label string="Import Sale Orders since"
                                           class="oe_inline"/>
                                    <field name="import_sale_orders_since_date" class="oe_inline"
                                           nolabel="1"/>
                                </div>
                                <button name="import_sale_orders_since" type="object"
                                        class="oe_highlight" string="Import in background"/>
                            </group>
                        </page>
                        <page name="mappings" string="Mappings">
                            <group string="Marketplaces">
                                <field name="marketplace_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="partner_id"/>
                                    <field name="lengow_marketplace"/>
                                </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="lengow_backend_view_tree" model="ir.ui.view">
        <field name="name">lengow.backend.tree</field>
        <field name="model">lengow.backend</field>
        <field name="arch" type="xml">
            <tree string="Lengow Backend">
                <field name="name"/>
                <field name="company_id"/>
                <field name="access_token"/>
                <field name="secret"/>
                <field name="base_url"/>
            </tree>
        </field>
    </record>

    <record id="lengow_backend_action" model="ir.actions.act_window">
        <field name="name">Lengow Backends</field>
        <field name="res_model">lengow.backend</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>



