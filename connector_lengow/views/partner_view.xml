<odoo>
    <record id="res_partner_view_form_connector_sapb1" model="ir.ui.view">
        <field name="name">res.partner.sapb1.connector.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook" position="inside">
                <page
                    string="Connector Lengow"
                    name="connector"
                    groups="connector.group_connector_manager"
                >
                    <group string="Lengow Bindings">
                        <field name="lengow_bind_ids" colspan="2" nolabel="1" />
                    </group>
                </page>
            </xpath>
            <xpath expr="//h1//field[@name='name']" position="after">
                <field name="lengow_bind_ids" invisible="1" />
            </xpath>
            <xpath expr="//h1//field[@name='name']" position="attributes">
                <attribute name="attrs">{
                    'readonly': [('lengow_bind_ids', '!=', [])]
                }</attribute>
            </xpath>
            <xpath
                expr="/form/sheet/group//field[@name='street']"
                position="attributes"
            >
                <attribute name="attrs">{
                    'readonly': ['|', '&amp;', ('type', '=', 'contact'), ('parent_id', '!=', False),
                                 ('lengow_bind_ids', '!=', [])]
                }</attribute>
            </xpath>
            <xpath
                expr="/form/sheet/group//field[@name='street2']"
                position="attributes"
            >
                <attribute name="attrs">{
                    'readonly': ['|', '&amp;', ('type', '=', 'contact'), ('parent_id', '!=', False),
                                 ('lengow_bind_ids', '!=', [])]
                }</attribute>
            </xpath>
            <xpath expr="/form/sheet/group//field[@name='zip']" position="attributes">
                <attribute name="attrs">{
                    'readonly': ['|', '&amp;', ('type', '=', 'contact'), ('parent_id', '!=', False),
                                 ('lengow_bind_ids', '!=', [])]
                }</attribute>
            </xpath>
            <xpath expr="/form/sheet/group//field[@name='city']" position="attributes">
                <attribute name="attrs">{
                    'readonly': ['|', '&amp;', ('type', '=', 'contact'), ('parent_id', '!=', False),
                                 ('lengow_bind_ids', '!=', [])]
                }</attribute>
            </xpath>
            <xpath
                expr="/form/sheet/group//field[@name='country_id']"
                position="attributes"
            >
                <attribute name="attrs">{
                    'readonly': ['|', '&amp;', ('type', '=', 'contact'), ('parent_id', '!=', False),
                                 ('lengow_bind_ids', '!=', [])]
                }</attribute>
            </xpath>
        </field>
    </record>
    <record id="lengow_res_partner_view_form" model="ir.ui.view">
        <field name="name">lengow.res.partner.form</field>
        <field name="model">lengow.res.partner</field>
        <field name="arch" type="xml">
            <form string="Lengow Partner">
                <sheet>
                    <group>
                        <field name="backend_id" />
                    </group>
                    <group>
                        <field name="odoo_id" />
                        <field name="email" />
                    </group>
                    <group>
                        <field name="sync_date" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="lengow_res_partner_view_tree" model="ir.ui.view">
        <field name="name">lengow.res.partner.tree</field>
        <field name="model">lengow.res.partner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="backend_id" />
                <field name="odoo_id" />
                <field name="email" readonly="1" />
                <field name="sync_date" />
            </tree>
        </field>
    </record>
    <record id="lengow_res_partner_view_search" model="ir.ui.view">
        <field name="name">lengow.res.partner.search</field>
        <field name="model">lengow.res.partner</field>
        <field name="arch" type="xml">
            <search string="Search Partner">
                <field name="odoo_id" filter_domain="[('odoo_id','ilike',self)]" />
                <field name="email" />
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active','=',False)]"
                />
                <group expand="0" name="group_by" string="Group By">
                    <filter
                        name="group_backend"
                        string="Backend"
                        domain="[]"
                        context="{'group_by' : 'backend_id'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="lengow_res_partner_action" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">lengow.res.partner</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
