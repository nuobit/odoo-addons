<odoo>
    <record id="wordpress_ir_checksum_view_form" model="ir.ui.view">
        <field name="name">wordpress.ir.checksum.view.form</field>
        <field name="model">wordpress.ir.checksum</field>
        <field name="arch" type="xml">
            <form string="WordPress Ir Checksum">
                <group>
                    <field name="backend_id" />
                    <field name="odoo_id" readonly="True" />
                    <field name="checksum" />
                    <field name="sync_date" readonly="True" />
                </group>
            </form>
        </field>
    </record>
    <record id="wordpress_ir_checksum_view_tree" model="ir.ui.view">
        <field name="name">wordpress.ir.checksum.view.tree</field>
        <field name="model">wordpress.ir.checksum</field>
        <field name="arch" type="xml">
            <tree>
                <field name="backend_id" />
                <field name="odoo_id" />
                <field name="checksum" />
                <field name="title" />
                <field name="sync_date" />
                <button
                    name="resync_export"
                    type="object"
                    string="Resynchronize"
                    icon="fa-refresh fa-lg"
                />
            </tree>
        </field>
    </record>
    <record id="wordpress_ir_checksum_action" model="ir.actions.act_window">
        <field name="name">Checksum</field>
        <field name="res_model">wordpress.ir.checksum</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
