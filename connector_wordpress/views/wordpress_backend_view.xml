<odoo>
    <record id="wordpress_backend_view_form" model="ir.ui.view">
        <field name="name">wordpress.backend.form</field>
        <field name="model">wordpress.backend</field>
        <field name="arch" type="xml">
            <form string="WordPress Backend">
                <header>
                    <button
                        name="button_check_connection"
                        type="object"
                        class="oe_highlight"
                        string="Check Connection"
                        attrs="{'invisible':[('state', 'not in', ['draft'])]}"
                    />
                    <button
                        name="button_reset_to_draft"
                        type="object"
                        string="Reset To draft Connection"
                        attrs="{'invisible':[('state', 'in', ['draft'])]}"
                    />
                    <field name="state" widget="statusbar" readonly="1" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <widget
                            name="web_ribbon"
                            title="Archived"
                            bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"
                        />
                        <field name="active" invisible="1" />
                    </div>
                    <h1>
                        <field
                            name="name"
                            class="oe_inline"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                        />
                    </h1>
                    <group>
                        <group>
                            <field
                                name="url"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                            <field
                                name="username"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />

                        </group>
                        <group>
                            <field name="version" />
                            <field
                                name="application_password"
                                password="True"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />

                        </group>
                    </group>
                    <notebook>
                        <page name="settings" string="Debug" groups="base.group_no_one">
                            <group>
                                <field name="test_database" />
                                <field name="verify_ssl" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="wordpress_backend_view_tree" model="ir.ui.view">
        <field name="name">wordpress.backend.tree</field>
        <field name="model">wordpress.backend</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="url" />
                <field name="username" />
                <field name="application_password" />
                <field name="version" />
            </tree>
        </field>
    </record>
    <record id="wordpress_backend_action" model="ir.actions.act_window">
        <field name="name">WordPress Backends</field>
        <field name="res_model">wordpress.backend</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
