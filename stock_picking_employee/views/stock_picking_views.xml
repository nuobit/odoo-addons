<odoo>
    <record id="stock_picking_view_form_inherit_employee" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.employee</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='extra']//field[@name='picking_type_code']/.." position="inside">
                <field name="employee_ids" attrs="{'readonly': [('state', '!=', 'draft')]}" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
</odoo>