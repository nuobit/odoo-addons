<odoo>
    <record id="res_partner_view_form_connector_sapb1" model="ir.ui.view">
        <field name="name">res.partner.sapb1.connector.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook" position="inside">
                <page
                    string="Connector SAPB1"
                    name="connector"
                    groups="connector.group_connector_manager"
                >
                    <group string="SAP B1 Bindings">
                        <field name="sapb1_bind_ids" colspan="2" nolabel="1" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="sapb1_res_partner_view_form" model="ir.ui.view">
        <field name="name">sapb1.res.partner.form</field>
        <field name="model">sapb1.res.partner</field>
        <field name="arch" type="xml">
            <form string="SAP B1 Partner">
                <header>
                    <button
                        name="resync_export"
                        type="object"
                        class="oe_highlight"
                        string="Resync"
                    />
                </header>
                <sheet>
                    <group>
                        <field name="backend_id" />
                    </group>
                    <group>
                        <field name="odoo_id" />
                        <field name="sapb1_cardcode" />
                        <field name="sapb1_addressname" />
                    </group>
                    <group>
                        <field name="sync_date" readonly="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sapb1_res_partner_view_tree" model="ir.ui.view">
        <field name="name">sapb1.res.partner.tree</field>
        <field name="model">sapb1.res.partner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="backend_id" />
                <field name="odoo_id" />
                <field name="sapb1_cardcode" readonly="1" />
                <field name="sapb1_addressname" readonly="1" />
                <field name="sync_date" />
                <button
                    name="resync_export"
                    type="object"
                    string="Resynchronize"
                    icon="fa-refresh fa-lg"
                />
            </tree>
        </field>
    </record>
    <record id="sapb1_res_partner_view_search" model="ir.ui.view">
        <field name="name">sapb1.res.partner.search</field>
        <field name="model">sapb1.res.partner</field>
        <field name="arch" type="xml">
            <search string="Search Partner">
                <field name="odoo_id" filter_domain="[('odoo_id','ilike',self)]" />
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active','=',False)]"
                />
                <group expand="0" name="group_by" string="Group By">
                    <filter
                        name="group_backend"
                        string="Backend"
                        domain="[]"
                        context="{'group_by' : 'backend_id'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="sapb1_res_partner_action" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">sapb1.res.partner</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
