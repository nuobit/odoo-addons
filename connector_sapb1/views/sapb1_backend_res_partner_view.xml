<odoo>
    <record id="sapb1_backend_res_partner_view_form_connector" model="ir.ui.view">
        <field name="name">sapb1.backend.res.partner.form</field>
        <field name="model">sapb1.backend.res.partner</field>
        <field name="arch" type="xml">
            <form string="SAP B1 Backend">
                <group>
                    <field name="backend_id"/>
                    <field name="partner_id"/>
                    <field name="sapb1_cardcode"/>
                </group>
            </form>
        </field>
    </record>


    <record id="sapb1_backend_res_partner_view_tree" model="ir.ui.view">
        <field name="name">sapb1.backend.res.partner.tree</field>
        <field name="model">sapb1.backend.res.partner</field>
        <field name="arch" type="xml">
            <tree string="SAP B1 Backend Res Partner" editable="bottom">
                <field name="backend_id" />
                <field name="partner_id"/>
                <field name="sapb1_cardcode"/>
            </tree>
        </field>
    </record>

    <record id="sapb1_backend_res_partner_action" model="ir.actions.act_window">
        <field name="name">SAP B1 Backends Res Partner</field>
        <field name="res_model">sapb1.backend.res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
