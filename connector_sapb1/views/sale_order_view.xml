<odoo>
    <record id="view_order_form_status" model="ir.ui.view">
        <field name="name">sale.order.sapb1.connector.form.status</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="client_order_ref" position="after">
            </field>
        </field>
    </record>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.sapb1.connector.form</field>
        <field name="model">sale.order</field>
        <field
            name="inherit_id"
            ref="connector_common.view_sale_order_connector_form"
        />
        <field name="arch" type="xml">
            <page name="connector" position="attributes">
                <attribute name="invisible">0</attribute>
            </page>
            <page name="connector" position="inside">
                <group string="SAP B1 Bindings">
                    <field
                        name="sapb1_bind_ids"
                        nolabel="1"
                        context="{'default_odoo_id': active_id}"
                    />
                </group>
            </page>
        </field>
    </record>

    <record id="sapb1_sale_order_view_form" model="ir.ui.view">
        <field name="name">sapb1.sale.order.view.form</field>
        <field name="model">sapb1.sale.order</field>
        <field name="arch" type="xml">
            <form string="SAP B1 Sale order">
                <group>
                    <field name="backend_id" />
                    <field name="odoo_id" />
                    <field name="sapb1_docentry" />
                    <field name="sync_date" />
                </group>
            </form>
        </field>
    </record>

    <record id="sapb1_sale_order_view_tree" model="ir.ui.view">
        <field name="name">sapb1.sale.order.view.tree</field>
        <field name="model">sapb1.sale.order</field>
        <field name="arch" type="xml">
            <tree string="SAP B1 Sale order">
                <field name="backend_id" />
                <field name="odoo_id" />
                <field name="sapb1_docentry" />
                <field name="sync_date" />
                <button
                    name="resync_export"
                    type="object"
                    string="Resynchronize"
                    icon="fa-refresh fa-lg"
                />
            </tree>
        </field>
    </record>

    <record id="sapb1_sale_order_action" model="ir.actions.act_window">
        <field name="name">Orders</field>
        <field name="res_model">sapb1.sale.order</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
