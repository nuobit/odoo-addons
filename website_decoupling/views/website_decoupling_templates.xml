<odoo>
    <template id="login_layout_copy" name="Login Layout Copy">
        <!-- this should be always the same as `web.login_layout`, to avoid infinite
             recursion we cannot we cannot use that view directly -->
        <t t-call="web.layout">
            <t t-set="html_data" t-value="{'style': 'height: 100%;'}"/>
            <t t-set="head">
                <t t-call-assets="web.assets_common" t-js="false"/>
                <t t-call-assets="web.assets_frontend" t-js="false"/>
                <t t-call-assets="web.assets_common" t-css="false"/>
                <t t-call-assets="web.assets_frontend" t-css="false"/>
            </t>
            <t t-set="body_classname" t-value="'container'"/>

            <div class="row">
                <div class="col-md-6 col-md-offset-3 o_database_list">
                    <div class="text-center">
                        <img t-attf-src="/web/binary/company_logo{{ '?dbname='+db if db else '' }}"/>
                    </div>
                    <t t-raw="0"/>
                    <div class="text-center" t-if="not disable_footer">
                        <t t-if="not disable_database_manager">
                            <a class="" href="/web/database/manager">Manage Databases</a>
                            |
                        </t>
                        <a href="https://www.odoo.com" target="_blank">Powered by
                            <span>Odoo</span>
                        </a>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
