<odoo>
    <record id="view_bank_statement_form" model="ir.ui.view">
        <field name="name">account.bank.statement.form.inherit</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='balance_start']" position="before">
                <field name="disable_balance_start" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='balance_start']" position="attributes">
                <attribute
                    name="attrs"
                >{'readonly':[('disable_balance_start', '!=', False),('journal_type','=','cash')]}</attribute>
            </xpath>

            <xpath
                expr="//field[@name='balance_start']/parent::div//button[1]"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'invisible': ['|','|','|',('state','!=','open'),('journal_type','!=','cash'),('cashbox_start_id','!=',False),('disable_balance_start', '!=', False)]}</attribute>
            </xpath>
            <xpath
                expr="//field[@name='balance_start']/parent::div//button[@name='open_cashbox_id']"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'invisible': ['|','|','|',('state','!=','open'),('journal_type','!=','cash'),('cashbox_start_id', '=', False),('disable_balance_start', '!=', False)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
