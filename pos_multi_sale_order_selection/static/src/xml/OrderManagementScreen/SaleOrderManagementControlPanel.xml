<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-inherit="pos_sale.SaleOrderManagementControlPanel" t-inherit-mode="extension">
        <xpath expr="//div[@class='item button back']" position="after">
            <t t-if="multipleSelectionCount > 0">
                <div class="item button" t-on-click="() => this.trigger('finalize')">
                    <span
                        class="fa fa-pencil-square-o"
                        t-esc="multipleSelectionCount"
                    />
                    <span> Add</span>
                </div>
            </t>
        </xpath>
    </t>
</templates>
