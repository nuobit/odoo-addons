<odoo>
    <record id="pms_tiny_api_astroportal_form_view" model="ir.ui.view">
        <field name="name">pms.tiny.api.astroportal.form</field>
        <field name="model">pms.tiny.api.astroportal</field>
        <field name="arch" type="xml">
            <form string="Astroportales API">
                <sheet>
                    <h1>
                        <field name="name" class="oe_inline" />
                    </h1>
                    <group>
                        <field name="property_id" />
                    </group>
                    <group>
                        <field name="username" />
                        <field name="password" password="True" />
                    </group>
                     <group>
                        <field name="tax_percent" />
                        <field name="currency" />
                    </group>
                    <notebook>
                         <page name="mappings" string="Mappings">
                            <group string="Guest Types">
                                <field name="guest_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="tipofac" />
                                        <field name="guest_type" />
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page name="debug" string="Debug" groups="base.group_no_one">
                            <group>
                                <field name="debug_reservation_codes" />
                                <field name="debug_no_mark" />
                                <field name="debug_download_marked" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="pms_tiny_api_astroportal_tree_view" model="ir.ui.view">
        <field name="name">pms.tiny.api.astroportal.tree</field>
        <field name="model">pms.tiny.api.astroportal</field>
        <field name="arch" type="xml">
            <tree string="Astroportales API">
                <field name="name" />
                <field name="username" />
                <field name="property_id" />
            </tree>
        </field>
    </record>
    <record id="pms_tiny_api_astroportal_action" model="ir.actions.act_window">
        <field name="name">API Astroportales</field>
        <field name="res_model">pms.tiny.api.astroportal</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
