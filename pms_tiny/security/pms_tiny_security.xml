<odoo noupdate="1">
    <record id="module_category_pms_tiny" model="ir.module.category">
        <field name="name">PMS tiny</field>
        <field name="description">Helps you manage PMS reservations</field>
        <field name="sequence">1000</field>
    </record>
    <record id="group_pms_tiny_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_pms_tiny" />
    </record>
    <record id="group_pms_tiny_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_pms_tiny" />
        <field
            name="implied_ids"
            eval="[(6, False, [ref('pms_tiny.group_pms_tiny_user')])]"
        />
    </record>
    <record id="pms_tiny_property_company_rule" model="ir.rule">
        <field name="name">PMS Tiny property multi-company rule</field>
        <field name="model_id" ref="model_pms_tiny_property" />
        <field
            name="domain_force"
        >['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]
        </field>
    </record>
    <record id="pms_tiny_reservation_company_rule" model="ir.rule">
        <field name="name">PMS Tiny reservation multi-company rule</field>
        <field name="model_id" ref="model_pms_tiny_reservation" />
        <field
            name="domain_force"
        >['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]
        </field>
    </record>
</odoo>
