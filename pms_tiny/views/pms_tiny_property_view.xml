<odoo>
    <record id="pms_tiny_property_form_view" model="ir.ui.view">
        <field name="name">pms.tiny.property.form</field>
        <field name="model">pms.tiny.property</field>
        <field name="arch" type="xml">
            <form string="PMS Tiny Property">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="code" placeholder="Code" />
                        </h1>
                    </div>
                    <group>
                        <field name="company_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="pms_tiny_property_tree_view" model="ir.ui.view">
        <field name="name">pms.tiny.property.tree</field>
        <field name="model">pms.tiny.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="company_id" />
            </tree>
        </field>
    </record>
    <record id="pms_tiny_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">pms.tiny.property</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
