<odoo>
    <record id="group_cashier" model="res.groups">
        <field name="name">Cashier</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>
    <record id="group_allow_reprocess_bank_statement" model="res.groups">
        <field name="name">Allow reprocess bank and cash statements</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field name="users" eval="[(4, ref('base.user_root'))]" />
    </record>
    <record id="rule_cashier" model="ir.rule">
        <field name="name">Cashier view only his/her cash journals</field>
        <field name="model_id" ref="account.model_account_journal" />
        <field
            name="domain_force"
        >[('type', '=', 'cash'), ('id', '=', user.journal_id.id)]</field>
        <field
            name="groups"
            eval="[(4, ref('account_cash_statement_restrict.group_cashier'))]"
        />
    </record>

</odoo>
