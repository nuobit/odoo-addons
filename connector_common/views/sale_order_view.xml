<odoo>
    <record id="view_sale_order_connector_form" model="ir.ui.view">
        <field name="name">sale.order.connector.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="groups_id"
               eval="[(4, ref('connector.group_connector_manager'))]"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook" position="inside">
                <!-- change the invisible attribute to 0 when used
                     in submodules -->
                <page string="Connectors" name="connector" invisible="1">
                </page>
            </xpath>
        </field>
    </record>
</odoo>
