<odoo>
    <record id="res_partner_view_form_connector_sage" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="connector.view_partner_connector_form"/>
        <field name="arch" type="xml">
            <page name="connector" position="attributes">
                <attribute name="invisible">0</attribute>
            </page>
            <page name="connector" position="inside">
                <group string="Sage Bindings">
                    <field name="sage_bind_ids" nolabel="1"/>
                </group>
            </page>
        </field>
    </record>

    <record id="sage_res_partner_view_form" model="ir.ui.view">
        <field name="name">sage.res.partner.form</field>
        <field name="model">sage.res.partner</field>
        <field name="arch" type="xml">
            <form string="Sage Partner">
                <group>
                    <field name="backend_id"/>
                    <field name="odoo_id" readonly="True"/>
                    <field name="sage_codigo_empresa" readonly="True"/>
                    <field name="sage_codigo_empleado" readonly="True"/>
                    <field name="sync_date" readonly="True"/>
                </group>
            </form>
        </field>
    </record>

    <record id="sage_res_partner_view_tree" model="ir.ui.view">
        <field name="name">sage.res.partner.tree</field>
        <field name="model">sage.res.partner</field>
        <field name="arch" type="xml">
            <tree string="Sage Partner">
                <field name="backend_id"/>
                <field name="odoo_id"/>
                <field name="sage_codigo_empresa"/>
                <field name="sage_codigo_empleado"/>
                <field name="sync_date"/>
                <button name="resync" type="object"
                        string="Resynchronize" icon="fa-refresh fa-lg"/>
            </tree>
        </field>
    </record>

    <record id="sage_res_partner_action" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="res_model">sage.res.partner</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
