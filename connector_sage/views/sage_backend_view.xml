<odoo>
    <!-- Sage backend -->
    <record id="sage_backend_view_form" model="ir.ui.view">
        <field name="name">sage.backend.form</field>
        <field name="model">sage.backend</field>
        <field name="arch" type="xml">
            <form string="Sage Backend">
                <header>
                    <button name="button_check_connection" type="object" class="oe_highlight"
                            string="Check Connection" attrs="{'invisible':[('state', 'not in', ['draft'])]}"/>
                    <button name="button_reset_to_draft" type="object"
                            string="Reset To draft Connection" attrs="{'invisible':[('state', 'in', ['draft'])]}"/>
                    <field name="state" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="toggle_active"
                                icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <h1>
                        <field name="name" class="oe_inline" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </h1>
                    <group>
                        <field name="company_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                    <group>
                        <group col="4">
                            <field name="server" colspan="4" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="port" colspan="4" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="database" colspan="4" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="schema" colspan="4" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group col="4">
                            <field name="username" colspan="4" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="password" password="True" colspan="4"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="sage_company_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <group>
                        <field name="version" colspan="4"/>
                    </group>
                    <notebook attrs="{'invisible':[('state', 'in', ['draft'])]}">
                        <page name="import" string="Imports">
                            <p class="oe_grey oe_inline">
                                By clicking on the buttons,
                                you will initiate the
                                synchronizations
                                with Sage.
                                Note that the import or exports
                                won't be done directly,
                                they will create 'Jobs'
                                executed as soon
                                as possible.
                            </p>
                            <p class="oe_grey oe_inline">
                                Once imported,
                                some types of records,
                                like the products
                                or categories,
                                need a manual review.
                                You will find the list
                                of the
                                new records to review
                                in the menu 'Connectors > Checkpoint'.
                            </p>
                            <group>
                                <div>
                                    <h4>Import employees</h4>
                                    <ul class="list-unstyled">
                                        <li>
                                            <label string="Since" class="oe_inline"/>
                                            <field name="import_employees_since_date" class="oe_inline"
                                                   nolabel="1"/>
                                        </li>
                                        <li>
                                            <label string="Default account payable" class="oe_inline"/>
                                            <field name="import_employees_default_account_payable_id"
                                                   class="oe_inline"/>
                                        </li>
                                    </ul>
                                </div>
                                <button name="import_employees_since" type="object"
                                        class="oe_highlight" string="Import in background"/>
                            </group>
                            <group>
                                <div>
                                    <h4>Import labour agreements</h4>
                                    <ul class="list-unstyled">
                                        <li>
                                            <label string="Since" class="oe_inline"/>
                                            <field name="import_labour_agreements_since_date" class="oe_inline"
                                                   nolabel="1"/>
                                        </li>
                                    </ul>
                                </div>
                                <button name="import_labour_agreements_since" type="object"
                                        class="oe_highlight" string="Import in background"/>
                            </group>
                            <group>
                                <div>
                                    <h4>Import Payslip lines</h4>
                                    <ul class="list-unstyled">
                                        <li>
                                            <label string="Payslip" class="oe_inline"/>
                                            <field name="import_payslip_id" class="oe_inline"
                                                   nolabel="1"/>
                                        </li>
                                    </ul>
                                </div>
                                <button name="import_payslip_lines" type="object"
                                        class="oe_highlight" string="Import in background"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sage_sage_backend_view_tree" model="ir.ui.view">
        <field name="name">sage.backend.tree</field>
        <field name="model">sage.backend</field>
        <field name="arch" type="xml">
            <tree string="Sage Backend">
                <field name="name"/>
                <field name="company_id"/>
                <field name="server"/>
                <field name="port"/>
                <field name="database"/>
                <field name="schema"/>
                <field name="sage_company_id"/>
            </tree>
        </field>
    </record>

    <record id="sage_backend_action" model="ir.actions.act_window">
        <field name="name">Sage Backends</field>
        <field name="res_model">sage.backend</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
