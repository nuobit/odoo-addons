<odoo>
    <record id="anphitrion_backend_view_form" model="ir.ui.view">
        <field name="name">anphitrion.backend.form</field>
        <field name="model">anphitrion.backend</field>
        <field name="arch" type="xml">
            <form string="Anphitrion Backend">
                <header>
                    <button
                        name="button_check_connection"
                        type="object"
                        class="oe_highlight"
                        string="Check Connection"
                        attrs="{'invisible':[('state', 'not in', ['draft'])]}"
                    />
                    <button
                        name="button_reset_to_draft"
                        type="object"
                        string="Reset To draft Connection"
                        attrs="{'invisible':[('state', 'in', ['draft'])]}"
                    />
                    <field name="state" widget="statusbar" readonly="1" />
                </header>
                <div class="oe_button_box" name="button_box">
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <field name="active" invisible="1" />
                </div>
                <div class="oe_title">
                    <h1>
                        <field
                            name="name"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                            placeholder="Name"
                        />
                    </h1>
                </div>
                <group>
                    <group>
                        <field
                            name="property_id"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                            colspan="2"
                        />
                    </group>
                    <group>
                        <field
                            name="tz"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                            colspan="2"
                        />
                    </group>
                </group>
                <group>
                    <group>
                        <field
                            name="hostname"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                        />
                        <field
                            name="port"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                        />

                        <field
                            name="database"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                        />
                        <field
                            name="schema"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                        />

                        <field
                            name="username"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                        />
                        <field
                            name="password"
                            password="True"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                        />

                    </group>
                </group>
                <group>
                    <group>
                        <field
                            name="tax_percent"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                        />
                        <field
                            name="currency"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                        />
                    </group>
                </group>
                <group>
                    <field name="sync_offset" />
                </group>
                <group>
                    <field name="version" />
                </group>
                <notebook>
                    <page
                        name="import"
                        string="Imports"
                        attrs="{'invisible': [('state', '=', 'draft')]}"
                    >
                        <p class="oe_grey oe_inline">
                            By clicking on the buttons,
                            you will initiate the
                            synchronizations
                            with Anphitrion.
                            Note that the import or exports
                            won't be done directly,
                            they will create 'Jobs'
                            executed as soon
                            as possible.
                        </p>
                        <p class="oe_grey oe_inline">
                            Once imported,
                            some types of records,
                            like sale orders,
                            need a manual review.
                            You will find the list
                            of the
                            new records to review
                            in the menu 'Connectors > Checkpoint'.
                        </p>
                        <group>
                            <div colspan="4">
                                <label
                                    string="Import Reservations"
                                    class="oe_inline"
                                    for="import_reservations_since_date"
                                />
                                <field
                                    name="import_reservations_since_date"
                                    class="oe_inline"
                                    nolabel="1"
                                />
                                <button
                                    name="import_reservations_since"
                                    type="object"
                                    class="oe_highlight"
                                    string="Import in background"
                                    colspan="2"
                                />
                            </div>
                        </group>
                    </page>
                    <page name="parameters" string="Parameters">
                        <group>
                            <field name="min_reservation_number" />
                            <field name="agency_codes" />
                            <field name="agency_codes_with_mandatory_subagency_str" />
                        </group>
                    </page>
                    <page name="debug" string="Debug" groups="base.group_no_one">
                            <group>
                                <field name="debug_reservation_codes" />
                            </group>
                        </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="anphitrion_backend_view_tree" model="ir.ui.view">
        <field name="name">anphitrion.backend.tree</field>
        <field name="model">anphitrion.backend</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="property_id" />
                <field name="hostname" />
                <field name="database" />
                <field name="username" />
            </tree>
        </field>
    </record>

    <record id="anphitrion_backend_action" model="ir.actions.act_window">
        <field name="name">Anphitrion Backends</field>
        <field name="res_model">anphitrion.backend</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
