<odoo>
    <record id="account_asset_view_form" model="ir.ui.view">
        <field name="model">account.asset</field>
        <field
            name="inherit_id"
            ref="account_asset_management.account_asset_view_form"
        />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="partner_vat"/>
            </field>

            <notebook position="inside">
                <page string="Capital Asset" name="capital_asset">
                    <group>
                        <group>
                            <field name="invoice_number"/>
                            <field name="capital_asset_type_id"/>

                        </group>
                        <group>
                            <field name="invoice_date"/>
                            <field name="start_date_use"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="tax_base_amount"/>
                            <field name="temp_prorate_percent"/>
                            <field name="provisional_deductible_VAT_rate"/>
                            <field name="provisional_non_deductible_VAT_rate"/>
                        </group>
                        <group>
                            <field name="allowed_tax_ids" invisible="1"/>
                            <field name="tax_ids"/>
                            <field name="final_prorate_percent"/>
                            <field name="final_deductible_VAT_rate"/>
                            <field name="final_non_deductible_VAT_rate"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
