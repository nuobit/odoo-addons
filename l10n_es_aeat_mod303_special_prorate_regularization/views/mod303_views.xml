<odoo>
    <record id="l10n_es_aeat_map_tax_line_prorata_tree" model="ir.ui.view">
        <field name="name">l10n.es.aeat.map.tax.line.prorata.tree</field>
        <field name="model">l10n.es.aeat.map.tax.line</field>
        <field name="inherit_id" ref="l10n_es_aeat.l10n_es_aeat_map_tax_line_tree" />
        <field name="arch" type="xml">
            <field name="to_regularize" position="after">
                <field name="to_regularize_prorate" />
            </field>
        </field>
    </record>
    <record id="view_l10n_es_aeat_mod303_report_form" model="ir.ui.view">
        <field name="name">l10n_es.aeat.mod303.report.prorate.form</field>
        <field name="model">l10n.es.aeat.mod303.report</field>
        <field
            name="inherit_id"
            ref="l10n_es_aeat_mod303.view_l10n_es_aeat_mod303_report_form"
        />
        <field name="arch" type="xml">
            <group name="group_other_parameters" position="after">
                <group
                    string="Prorate Regularization Parameters"
                    name="Regularization Prorate Parameters"
                    attrs="{'invisible': [('period_type', 'not in', ('4T', '12'))]}"
                >
                    <field
                        name="counterpart_prorate_receivable_account_id"
                        string="Counterpart Account Receivable"
                        attrs="{'required': [('period_type', 'in', ('4T', '12'))]}"
                    />
                    <field
                        name="counterpart_prorate_payable_account_id"
                        string="Counterpart Account Payable"
                        attrs="{'required': [('period_type', 'in', ('4T', '12'))]}"
                    />
                </group>
                <group
                    string="Capital Assets Regularization Parameters"
                    name="regularization_capital_assets_parameters"
                    attrs="{'invisible': [('period_type', 'not in', ('4T', '12'))]}"
                >
                    <field
                        name="counterpart_capital_assets_receivable_account_id"
                        string="Counterpart Account Receivable"
                        attrs="{'required': [('period_type', 'in', ('4T', '12'))]}"
                    />
                    <field
                        name="counterpart_capital_assets_payable_account_id"
                        string="Counterpart Account Payable"
                        attrs="{'required': [('period_type', 'in', ('4T', '12'))]}"
                    />
                </group>
            </group>
            <field name="casilla_46" position="after">
                <field
                    name="field_43"
                    widget="monetary"
                    options="{'currency_field': 'currency_id'}"
                    attrs="{'invisible': [('period_type', 'not in', ('4T', '12'))]}"
                />
                <field
                    name="field_44"
                    widget="monetary"
                    options="{'currency_field': 'currency_id'}"
                    attrs="{'invisible': [('period_type', 'not in', ('4T', '12'))]}"
                />
            </field>
        </field>
    </record>
</odoo>
