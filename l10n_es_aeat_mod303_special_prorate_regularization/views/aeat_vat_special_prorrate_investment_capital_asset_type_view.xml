<odoo>
    <record id="aeat_vat_special_prorrate_investment_capital_asset_type_view_form" model="ir.ui.view">
        <field name="name">aeat.vat.special.prorrate.capital.asset.type.view.form</field>
        <field name="model">aeat.vat.special.prorrate.capital.asset.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="4">
                        <group colspan="2">
                            <field name="name"/>
                            <field name="period"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="aeat_vat_special_prorrate_investment_capital_asset_type_view_tree" model="ir.ui.view">
        <field name="name">aeat.vat.special.prorrate.capital.asset.type.view.tree</field>
        <field name="model">aeat.vat.special.prorrate.capital.asset.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="period"/>
            </tree>
        </field>
    </record>

    <record id="aeat_vat_special_prorrate_investment_capital_asset_type_action" model="ir.actions.act_window">
        <field name="name">Investment capital assets</field>
        <field name="res_model">aeat.vat.special.prorrate.capital.asset.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="aeat_vat_special_prorrate_capital_asset_type_menu"
              parent="l10n_es_aeat.menu_l10n_es_aeat_config"
              action="aeat_vat_special_prorrate_investment_capital_asset_type_action"
              name="Investment capital assets"/>
</odoo>
