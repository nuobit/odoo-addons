<odoo>
    <!-- window action protectionclass2product smart button -->
    <record id="product_protectionclass_action_product" model="ir.actions.act_window">
        <field name="name">Product</field>
        <field name="res_model">lighting.product</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('protection_class_id','=',active_id)]</field>
        <field name="context">{'protection_class_id': active_id}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first Product</p>
        </field>
    </record>

    <!-- view protection clas -->
    <record id="product_protectionclass_form_view" model="ir.ui.view">
        <field name="name">product.protectionclass.form</field>
        <field name="model">lighting.product.protectionclass</field>
        <field name="arch" type="xml">
            <form string="Protection class Form">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="action" class="oe_stat_button" icon="fa-filter"
                                name="%(product_protectionclass_action_product)d">
                            <field string="Products" name="product_count" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_protectionclass_tree_view" model="ir.ui.view">
        <field name="name">product.protectionclass.tree</field>
        <field name="model">lighting.product.protectionclass</field>
        <field name="arch" type="xml">
            <tree string="Protection class">
                <field name="name"/>
                <field name="product_count"/>
                <button name="%(product_protectionclass_action_product)d" type="action"
                        string="Products" icon="fa-external-link"
                        attrs="{'invisible': [('product_count', '=', 0)]}"/>
            </tree>
        </field>
    </record>

    <!-- window action protection class -->
    <record id="product_protectionclass_list_action" model="ir.actions.act_window">
        <field name="name">Protection class</field>
        <field name="res_model">lighting.product.protectionclass</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first Protection class
            </p>
        </field>
    </record>

    <menuitem id="product_protectionclasses_menu" name="Protection classes" parent="common_data_menu"
              action="product_protectionclass_list_action"
              sequence="1000"/>
</odoo>