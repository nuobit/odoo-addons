<odoo>
    <!-- Oxigesti backend -->
    <record id="oxigesti_backend_view_form" model="ir.ui.view">
        <field name="name">oxigesti.backend.form</field>
        <field name="model">oxigesti.backend</field>
        <field name="arch" type="xml">
            <form string="Oxigesti Backend">
                <header>
                    <button
                        name="button_check_connection"
                        type="object"
                        class="oe_highlight"
                        string="Check Connection"
                        attrs="{'invisible':[('state', 'not in', ['draft'])]}"
                    />
                    <button
                        name="button_reset_to_draft"
                        type="object"
                        string="Reset To draft Connection"
                        attrs="{'invisible':[('state', 'in', ['draft'])]}"
                    />
                    <field name="state" widget="statusbar" readonly="1" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <field name="active" invisible="1" />
                    <h1>
                        <field
                            name="name"
                            class="oe_inline"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                        />
                    </h1>
                    <group col="4">
                        <field
                            name="company_id"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                        />
                        <field
                            name="lang_id"
                            attrs="{'readonly': [('state', '!=', 'draft')]}"
                        />
                    </group>
                    <group>
                        <group col="4">
                            <field
                                name="server"
                                colspan="4"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                            <field
                                name="port"
                                colspan="4"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                            <field
                                name="database"
                                colspan="4"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                            <field
                                name="schema"
                                colspan="4"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                        </group>
                        <group col="4">
                            <field
                                name="username"
                                colspan="4"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                            <field
                                name="password"
                                password="True"
                                colspan="4"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                        </group>
                    </group>
                    <group>
                        <field name="version" colspan="4" />
                    </group>
                    <notebook attrs="{'invisible':[('state', 'in', ['draft'])]}">
                        <page name="synchronizers" string="Synchronizers">
                            <p class="oe_grey oe_inline">
                                By clicking on the buttons,
                                you will initiate the
                                synchronizations
                                with Oxigesti.
                                Note that the import or exports
                                won't be done directly,
                                they will create 'Jobs'
                                executed as soon
                                as possible.
                            </p>
                            <p class="oe_grey oe_inline">
                                Once imported,
                                some types of records,
                                like the products
                                or categories,
                                need a manual review.
                                You will find the list
                                of the
                                new records to review
                                in the menu 'Connectors > Checkpoint'.
                            </p>
                            <group>
                                <div>
                                    <label
                                        string="Import Customers since"
                                        class="oe_inline"
                                        for="import_customers_since_date"
                                    />
                                    <field
                                        name="import_customers_since_date"
                                        class="oe_inline"
                                        nolabel="1"
                                    />
                                </div>
                                <button
                                    name="import_customers_since"
                                    type="object"
                                    class="oe_highlight"
                                    string="Import in background"
                                />
                            </group>
                            <group>
                                <div>
                                    <label
                                        string="Export Products since"
                                        class="oe_inline"
                                        for="export_products_since_date"
                                    />
                                    <field
                                        name="export_products_since_date"
                                        class="oe_inline"
                                        nolabel="1"
                                    />
                                </div>
                                <button
                                    name="export_products_since"
                                    type="object"
                                    class="oe_highlight"
                                    string="Export in background"
                                />
                            </group>
                            <group>
                                <div>
                                    <label
                                        string="Export Product Categories since"
                                        class="oe_inline"
                                        for="export_product_categories_since_date"
                                    />
                                    <field
                                        name="export_product_categories_since_date"
                                        class="oe_inline"
                                        nolabel="1"
                                    />
                                </div>
                                <button
                                    name="export_product_categories_since"
                                    type="object"
                                    class="oe_highlight"
                                    string="Export in background"
                                />
                            </group>
                            <group>
                                <div>
                                    <label
                                        string="Export Products by customer since"
                                        class="oe_inline"
                                        for="export_products_by_customer_since_date"
                                    />
                                    <field
                                        name="export_products_by_customer_since_date"
                                        class="oe_inline"
                                        nolabel="1"
                                    />
                                </div>
                                <button
                                    name="export_products_by_customer_since"
                                    type="object"
                                    class="oe_highlight"
                                    string="Export in background"
                                />
                            </group>
                            <group>
                                <div>
                                    <label
                                        string="Export Product prices by customer since"
                                        class="oe_inline"
                                        for="export_product_prices_by_customer_since_date"
                                    />
                                    <field
                                        name="export_product_prices_by_customer_since_date"
                                        class="oe_inline"
                                        nolabel="1"
                                    />
                                </div>
                                <button
                                    name="export_product_prices_by_customer_since"
                                    type="object"
                                    class="oe_highlight"
                                    string="Export in background"
                                />
                            </group>
                            <group>
                                <div>
                                    <label
                                        string="Export Lots since"
                                        class="oe_inline"
                                        for="export_stock_production_lot_since_date"
                                    />
                                    <field
                                        name="export_stock_production_lot_since_date"
                                        class="oe_inline"
                                        nolabel="1"
                                    />
                                </div>
                                <button
                                    name="export_stock_production_lot_since"
                                    type="object"
                                    class="oe_highlight"
                                    string="Export in background"
                                />
                            </group>
                            <group>
                                <div>
                                    <label
                                        string="Import Services since"
                                        class="oe_inline"
                                        for="import_services_since_date"
                                    />
                                    <field
                                        name="import_services_since_date"
                                        class="oe_inline"
                                        nolabel="1"
                                    />
                                </div>
                                <button
                                    name="import_services_since"
                                    type="object"
                                    class="oe_highlight"
                                    string="Import in background"
                                />
                            </group>
                        </page>
                        <page name="additional_data" string="Additional data">
                            <group>
                                <field name="warehouse_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="oxigesti_backend_view_tree" model="ir.ui.view">
        <field name="name">oxigesti.backend.tree</field>
        <field name="model">oxigesti.backend</field>
        <field name="arch" type="xml">
            <tree string="Oxigesti Backend">
                <field name="name" />
                <field name="company_id" />
                <field name="server" />
                <field name="port" />
                <field name="database" />
                <field name="schema" />
            </tree>
        </field>
    </record>

    <record id="oxigesti_backend_action" model="ir.actions.act_window">
        <field name="name">Oxigesti Backends</field>
        <field name="res_model">oxigesti.backend</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
