<odoo>
    <record id="mrp_production_only_form_view" model="ir.ui.view">
        <field name="name">mrp.production.connector.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field
            name="groups_id"
            eval="[(4, ref('connector.group_connector_manager'))]"
        />
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook" position="inside">
                <page string="Oxigesti Connector" name="connector">
                    <group string="Oxigesti Bindings">
                        <field name="oxigesti_bind_ids" nolabel="1" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="oxigesti_mrp_production_view_form" model="ir.ui.view">
        <field name="name">oxigesti.mrp.production.form</field>
        <field name="model">oxigesti.mrp.production</field>
        <field name="arch" type="xml">
            <form string="Oxigesti Manufacturing Orders">
                <group>
                    <field name="backend_id" />
                    <field name="odoo_id" readonly="True" />
                    <field name="external_id_display" readonly="True" />
                    <field name="sync_date" readonly="True" />
                </group>
            </form>
        </field>
    </record>
    <record id="oxigesti_mrp_production_view_tree" model="ir.ui.view">
        <field name="name">oxigesti.mrp.production.tree</field>
        <field name="model">oxigesti.mrp.production</field>
        <field name="arch" type="xml">
            <tree string="Oxigesti Manufacturing Orders">
                <field name="backend_id" />
                <field name="odoo_id" />
                <field name="external_id_display" readonly="True" />
                <field name="sync_date" />
                <button
                    name="resync"
                    type="object"
                    string="Resynchronize"
                    icon="fa-refresh fa-lg"
                />
            </tree>
        </field>
    </record>
    <record id="oxigesti_mrp_production_action" model="ir.actions.act_window">
        <field name="name">ManufacturingOrder</field>
        <field name="res_model">oxigesti.mrp.production</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
