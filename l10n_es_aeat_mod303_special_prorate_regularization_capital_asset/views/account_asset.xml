<odoo>
    <record id="account_asset_view_form" model="ir.ui.view">
        <field name="model">account.asset</field>
        <field
            name="inherit_id"
            ref="account_asset_management.account_asset_view_form"
        />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page
                    string="Capital Asset Prorate Regularizations"
                    name="capital_asset_prorate_regularizations"
                >
                    <group>
                        <field
                            name="capital_asset_prorate_regularization_ids"
                            nolabel="1"
                        >
                            <tree
                                name="capital_asset_prorate_regularization_ids"
                                string="Asset Prorate Regularization"
                                editable="bottom"
                            >
                                <field name="year" />
                                <field name="amount" />
                                <field name="prorate_year" />
                                <field
                                    name="mod303_id"
                                    options="{'no_create': True, 'no_edit': True}"
                                    attrs="{'readonly':[('id','!=',False)]}"
                                />
                            </tree>
                        </field>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
