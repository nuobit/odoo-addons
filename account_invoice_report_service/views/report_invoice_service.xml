<odoo>
    <template id="report_assets_common_invoice_service_style"
              inherit_id="web.report_assets_common">
        <xpath expr="." position="inside">
            <link href="/account_invoice_report_service/static/src/less/styles.less" rel="stylesheet" type="text/less"/>
        </xpath>
    </template>

    <template id="external_layout_invoice_service">
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

        <div class="header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-6">
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)"/>
                    </div>
                </div>
            </div>
        </div>

        <div class="article o_report_layout_standard">
            <t t-raw="0"/>
        </div>

        <div class="footer">
            <div class="text-center" style="font-size: 8px;">
                <ul class="list-unstyled mt4 mb4">
                    <li>
                        <span t-field="company.name"/>
                        -
                        <t t-esc="company.country_id.vat_label or 'CIF'"/>:
                        <span t-field="company.vat"/>
                    </li>
                    <li t-if="company.street or company.street2">
                        <span t-esc="' '.join(filter(lambda x: x, [company.street,company.street2]))"/>
                        <span t-esc="' '.join(filter(lambda x: x, [company.zip,company.city,company.state_id.name, company.country_id.name]))"/>
                    </li>
                    <li>
                        <t t-if="company.phone">
                            Tel.
                            <span t-field="company.phone"/>
                        </t>
                        <span t-esc="' / '.join(filter(lambda x: x, [company.email, company.website]))"/>
                    </li>
                </ul>
                <div class="text-muted">
                    Page
                    <span class="page"/>
                    of
                    <span class="topage"/>
                </div>
            </div>
        </div>
    </template>

    <template id="report_invoice_service_document">
        <t t-call="account_invoice_report_service.external_layout_invoice_service">
            <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
            <div class="page ris-page">
                <div class="row">
                    <div class="col-xs-5 pull-right">
                        <p>
                            <div style="font-size: 14px;">
                                <strong t-field="o.partner_id.name"/>
                            </div>
                            <div style="font-size: 12px;">
                                <div t-if="o.partner_id.street" t-field="o.partner_id.street"/>
                                <div t-if="o.partner_id.street2" t-field="o.partner_id.street2"/>
                                <div>
                                    <span t-if="o.partner_id.zip" t-field="o.partner_id.zip"/>
                                    <span t-if="o.partner_id.city" t-field="o.partner_id.city"/>
                                    <span t-if="o.partner_id.country_id">(<span t-field="o.partner_id.country_id"/>)
                                    </span>
                                </div>
                            </div>
                        </p>
                        <p t-if="o.partner_id.vat" class="mt16" style="font-size: 12px;">
                            <t t-esc="o.company_id.country_id.vat_label or 'CIF'"/>:
                            <span t-field="o.partner_id.vat"/>
                        </p>
                    </div>
                </div>

                <div class="row mb8">
                    <div class="col-xs-4 pull-right text-right" t-if="o.partner_id.ref">
                        <strong>Customer code:</strong>
                        <span t-field="o.partner_id.ref"/>
                    </div>
                </div>

                <table class="ris-table-1 mb16" name="invoice_line_table">
                    <thead>
                        <tr>
                            <td class="text-right">
                                <ul class="list-unstyled mb0">
                                    <li>
                                        <strong>
                                            <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">
                                                Invoice
                                            </span>
                                            <span t-if="o.type == 'out_invoice' and o.state == 'draft'">
                                                <span>Draft Invoice</span>
                                            </span>
                                            <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">
                                                <span>Cancelled Invoice</span>
                                            </span>
                                            <span t-if="o.type == 'out_refund'">Credit Note</span>
                                            <span t-if="o.type == 'in_refund'">Vendor Credit Note</span>
                                            <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
                                            <t t-if="o.number">
                                                <span>Num.</span>
                                                <span t-field="o.number"/>
                                            </t>
                                        </strong>
                                    </li>
                                    <li>
                                        <span>
                                            <strong>Date:</strong>
                                            <span t-field="o.date_invoice"/>
                                        </span>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                        <tr>
                            <th>
                                <table class="ris-table0">
                                    <thead>
                                        <tr>
                                            <th class="text-left" colspan="6">
                                                <h6 style="border-bottom: 1px solid #0d9697;margin-top:1px;margin-bottom:4px;">
                                                    Patient data
                                                </h6>
                                            </th>
                                        </tr>
                                        <tr>
                                            <th>
                                                <table class="ris-table1">
                                                    <thead>
                                                        <tr>
                                                            <th width="15%">Contract number</th>
                                                            <th width="40%" class="text-left">Name</th>
                                                            <th width="15%">ID number</th>
                                                            <th width="15">Policy</th>
                                                            <th width="15%">Authorization num.</th>
                                                        </tr>
                                                    </thead>
                                                </table>
                                            </th>
                                        </tr>
                                        <tr>
                                            <th class="text-left" colspan="6">
                                                <h6 style="border-bottom: 1px solid #0d9697;margin-top:1px;margin-bottom:4px;">
                                                    Service data
                                                </h6>
                                            </th>
                                        </tr>
                                        <tr>
                                            <th>
                                                <table class="ris-table1">
                                                    <thead>
                                                        <tr>
                                                            <th width="10%">Plate</th>
                                                            <th width="10%">Service num.</th>
                                                            <th width="10%">Service date</th>
                                                            <th width="30%">Origin</th>
                                                            <th width="30%">Destination</th>
                                                            <th width="10%"/>
                                                        </tr>
                                                    </thead>
                                                </table>
                                            </th>
                                        </tr>
                                        <tr>
                                            <th>
                                                <table class="ris-table1">
                                                    <thead>
                                                        <tr>
                                                            <th width="30%"/>
                                                            <th width="40%">Description</th>
                                                            <th width="10%" class="text-right">Quantity</th>
                                                            <th width="10%" class="text-right">Unit Price</th>
                                                            <th width="10%" class="text-right">Amount</th>
                                                        </tr>
                                                    </thead>
                                                </table>
                                            </th>
                                        </tr>
                                    </thead>
                                </table>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-foreach="o.get_lines_by_order()" t-as="l">
                            <t t-set="order" t-value="l[0]"/>
                            <t t-set="invoice_lines" t-value="l[1]"/>
                            <tr>
                                <td>
                                    <table class="ris-table2">
                                        <tbody>
                                            <tr t-if="order">
                                                <td>
                                                    <table class="ris-table3">
                                                        <tbody>
                                                            <tr>
                                                                <td width="15%">
                                                                    <span t-field="order.contract_number"/>
                                                                </td>
                                                                <td width="40%">
                                                                    <span t-field="order.insured_name"/>
                                                                </td>
                                                                <td width="15%">
                                                                    <span t-field="order.insured_ident_cardnum"/>
                                                                </td>
                                                                <td width="15%">
                                                                    <span t-field="order.policy_number"/>
                                                                </td>
                                                                <td width="15%">
                                                                    <span t-field="order.auth_number"/>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </td>
                                            </tr>
                                            <tr t-if="order">
                                                <td>
                                                    <table class="ris-table3">
                                                        <tbody>
                                                            <tr>
                                                                <td width="10%">
                                                                    <span t-field="order.plate_number"/>
                                                                </td>
                                                                <td width="10%">
                                                                    <span t-field="order.service_number"/>
                                                                </td>
                                                                <td width="10%">
                                                                    <span t-field="order.service_date"/>
                                                                </td>
                                                                <td width="30%">
                                                                    <span t-field="order.origin"/>
                                                                </td>
                                                                <td width="30%">
                                                                    <span t-field="order.destination"/>
                                                                </td>
                                                                <td width="10%" class="text-right">
                                                                    <span t-field="order.service_direction"/>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </td>
                                            </tr>

                                            <t t-if="invoice_lines">
                                                <t t-set="order_total" t-value="0"/>
                                                <tr>
                                                    <td>
                                                        <table class="ris-table3">
                                                            <tbody>
                                                                <t t-foreach="invoice_lines" t-as="il">
                                                                    <tr>
                                                                        <td width="30%"/>
                                                                        <td width="40%">
                                                                            <span t-field="il.name"/>
                                                                        </td>
                                                                        <td width="10%" class="text-right">
                                                                            <span t-field="il.quantity"/>
                                                                            <span t-field="il.uom_id"
                                                                                  groups="product.group_uom"/>
                                                                        </td>
                                                                        <td width="10%" class="text-right">
                                                                            <span t-field="il.price_unit"/>
                                                                        </td>
                                                                        <td width="10%" class="text-right"
                                                                            id="subtotal">
                                                                            <span t-field="il.price_subtotal"
                                                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                                        </td>
                                                                    </tr>
                                                                    <t t-set="order_total"
                                                                       t-value="order_total+il.price_subtotal"/>
                                                                </t>
                                                            </tbody>
                                                        </table>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <table class="ris-table3">
                                                            <tbody>
                                                                <tr>
                                                                    <td width="80%"/>
                                                                    <td width="10%" class="text-right">
                                                                        <strong>Total</strong>
                                                                    </td>
                                                                    <td width="10%" class="text-right">
                                                                        <strong>
                                                                            <span t-esc="order_total"
                                                                                  t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                                                        </strong>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <div class="clearfix">
                    <div id="total" class="row">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed" style="min-width: 250px;max-width: 400px;">
                                <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                    <td>
                                        <strong>Subtotal</strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                                <tr class="border-black">
                                    <td>
                                        <strong>Total</strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <ul class="list-unstyled mb4 mt4">
                            <li t-if="o.payment_mode_id or o.payment_term_id">
                                <span>Payment terms:</span>
                                <span t-if="o.payment_mode_id.name" t-field="o.payment_mode_id.name"/>
                                <span t-if="o.payment_term_id.name" t-field="o.payment_term_id.name"/>
                            </li>
                            <t t-if="o.payment_mode_id.payment_method_id.code == 'customer_transfer' and o.payment_mode_id.payment_method_id.payment_type == 'inbound'">
                                <li>
                                    <t t-set="bank_account_id"
                                       t-value="o.partner_bank_id or o.company_id.partner_id.bank_ids and o.company_id.partner_id.bank_ids.sorted(lambda x: x.sequence)[0]"/>
                                    <span t-field="bank_account_id.acc_number"/>
                                    <span t-field="bank_account_id.bank_id.display_name"/>
                                </li>
                            </t>
                            <li>
                                Please indicate in your payments the invoice numbers that you cancel*
                            </li>
                            <t t-set="notaxable_taxes"
                               t-value="o.invoice_line_ids.mapped('invoice_line_tax_ids').filtered(lambda x: x.description=='S_IVA0')"/>
                            <li t-if="notaxable_taxes">
                                Billing lines with VAT-free operations - Law 37/1992, article 20, one, 15th
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="report_invoice_service">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="account_invoice_report_service.report_invoice_service_document"
                   t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>